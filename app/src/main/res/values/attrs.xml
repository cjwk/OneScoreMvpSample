        <item>@string/basket_info_america</item>
        <item>@string/basket_info_asia</item>
        <item>@string/basket_info_africa</item>
        <item>@string/football_info_oceania</item>
        <item>@string/basket_info_inter</item>
    </string-array>

    <string-array name="league_statistics_today_tabs">
        <item>@string/league_statistics_today_tab1</item>
        <item>@string/league_statistics_today_tab2</item>
        <item>@string/league_statistics_today_tab3</item>
        <item>@string/league_statistics_today_tab4</item>
        <item>@string/league_statistics_today_tab5</item>
    </string-array>

    <string-array name="snooker_info_tabs">
        <item>@string/snooker_qualifiers</item>
        <item>@string/snooker_match</item>
        <item>@string/snooker_champion</item>
        <item>@string/snooker_tournament</item>
    </string-array>

    <!--圆形-->
    <declare-styleable name="circleImageView">
        <attr name="civ_border_width" format="dimension" />
        <attr name="civ_border_color" format="color" />
        <attr name="civ_border_overlay" format="boolean" />
        <attr name="civ_fill_color" format="color" />
    </declare-styleable>
</resources>