<?xml version="1.0" encoding="utf-8"?>
<resources>


    <!-- 滑动阻尼效果 -->
    <declare-styleable name="ParallaxScrollView">
        <attr name="zoomRatio" format="float" />
    </declare-styleable>
    <!-- 样式 -->
    <attr name="bg" format="reference|color" />
    <attr name="actionBg" format="reference|color" />
    <attr name="actionDividerBg" format="reference|color" />
    <attr name="actionTextColor" format="reference|color" />
    <attr name="btncolor" format="reference|color" />
    <attr name="dialogBtncolor" format="reference|color" />
    <!-- 圆形ImageView -->
    <declare-styleable name="CircleImageView">
        <attr name="border_width" format="dimension" />
        <attr name="border_color" format="color" />
    </declare-styleable>

    <!-- 首页轮播图View -->
    <declare-styleable name="CircleFlowIndicator">
        <attr name="activeColor" format="color" />
        <attr name="inactiveColor" format="color" />
        <attr name="radius" format="dimension" />
        <attr name="centered" format="boolean" />
        <attr name="fadeOut" format="integer" />
        <attr name="inactiveType">
            <flag name="stroke" value="0" />
            <flag name="fill" value="1" />
        </attr>
        <attr name="activeType">
            <flag name="stroke" value="0" />
            <flag name="fill" value="1" />
        </attr>
        <attr name="circleSeparation" format="dimension" />
        <attr name="activeRadius" format="dimension" />
    </declare-styleable>
    <declare-styleable name="ViewFlow">
        <attr name="sidebuffer" format="integer" />
    </declare-styleable>
    
    
    <declare-styleable name="SlideListView">
        <attr name="itemPaddingRight" format="dimension" />
    </declare-styleable>

    <declare-styleable name="ToolbarScrollerView">
        <attr name="toolbarHeight" format="dimension"/>
        <attr name="toolbarBackGroundHeight" format="dimension"/>
    </declare-styleable>

    <declare-styleable name="TimeView" >
        <!--设置字体大小-->
        <attr name="time_textsize" format="dimension"/>
        <!--设置中间黑色部分占总宽度的比例-->
        <attr name="time_midwidth_proportion" format="integer"/>
    </declare-styleable>

    <declare-styleable name="FootballEventView">
        <!--设置图片居于底部还是顶部-->
        <attr name="image_gravity" format="string"></attr>
        <!--设置中间黑色部分占总宽度的比例,上面布局得跟时间轴的比例一样才行-->
        <attr name="midwidth_proportion" format="integer"/>
        <!--距离左边距离-->
        <attr name="mdymargin" format="dimension"/>
    </declare-styleable>
  <!--赛季选择-->
    <string-array name="languages">
        <item>@string/data_date_txt</item>
        <item>@string/data_date_txt1</item>
    </string-array>

    <string-array name="foot_details_tabs">
        <item>@string/foot_details_roolball</item>
        <item>@string/foot_details_statistics</item>
        <item>@string/foot_details_analyze</item>
        <item>@string/foot_details_info</item>
        <item>@string/foot_details_odds</item>
        <item>@string/foot_details_talkball</item>
    </string-array>

    <!--足球篮球切换-->
    <string-array name="ball_select">
        <item>@string/football_frame_txt</item>
        <item>@string/basket_left</item>
    </string-array>

    <!--环形进度条-->
    <declare-styleable name="RoundProgressBar">
        <attr name="roundColor" format="color"/>
        <attr name="roundProgressColor" format="color"/>
        <attr name="roundWidth" format="dimension"></attr>
        <attr name="textColor" format="color" />
        <attr name="textSize" format="dimension" />
        <attr name="max" format="integer"></attr>
        <attr name="textIsDisplayable" format="boolean"></attr>
        <attr name="style">
            <enum name="STROKE" value="0"></enum>
            <enum name="FILL" value="1"></enum>
        </attr>
    </declare-styleable>


    <string-array name="basket_info_tabs">
        <item>@string/basket_info_hot</item>
        <item>@string/basket_info_eur</item>
        <item>@string/basket_info_america</item>
        <item>@string/basket_info_asia</item>
        <item>@string/basket_info_africa</item>
        <item>@string/basket_info_inter</item>
    </string-array>

</resources>