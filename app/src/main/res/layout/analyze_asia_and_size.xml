<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!--亚盘走势-->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:text="@string/new_analyze_let"
            android:textColor="@color/analyze_title"
            android:textSize="@dimen/text_size_13"
            />

    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/line_football_footer"
        />

    <LinearLayout
        android:id="@+id/ll_analyze_let"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingRight="10dp"
        android:paddingLeft="10dp"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >
            <TextView
                android:id="@+id/tv_analyze_let1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text=""
                android:textSize="13sp"
                />
            <TextView
                android:id="@+id/tv_analyze_let2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textSize="13sp"
                />
            <TextView
                android:id="@+id/tv_analyze_let3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="13sp"
                android:text=""
                android:layout_marginBottom="10dp"
                />

        </LinearLayout>
        <!--历史交锋-->
        <LinearLayout
            android:id="@+id/ll_analyze_let_history"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone"
            >
            <!--饼状图-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:paddingTop="10dp"
                android:paddingBottom="10dp">

                <FrameLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/new_analyze_changci"
                            android:layout_gravity="center"/>
                        <TextView
                            android:id="@+id/analyze_let_history_vs_count"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="--"
                            android:layout_gravity="center"/>
                    </LinearLayout>

                    <com.hhly.mlottery.view.RoundProgressBar
                        android:id="@+id/analyze_let_history_progress"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:layout_gravity="center"
                        />
                </FrameLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.1"
                    android:orientation="vertical"
                    android:layout_gravity="center">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <View
                            android:layout_width="12dp"
                            android:layout_height="12dp"
                            android:background="@color/football_analyze_win_color"
                            android:layout_gravity="center"
                            />

                        <TextView

                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingLeft="10dp"
                            android:text="@string/new_analyze_home_win_rate"
                            android:textSize="@dimen/text_size_13"
                            android:textColor="@color/content_txt_black"/>
                        <TextView
                            android:id="@+id/analyze_let_history_home_win_percent"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="13sp"
                            android:text="--"
                            android:paddingLeft="3dp"
                            android:textColor="@color/mdy_333"
                            />

                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp">

                        <View
                            android:layout_width="12dp"
                            android:layout_height="12dp"
                            android:background="@color/football_analyze_lose_color"
                            android:layout_gravity="center"
                            />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingLeft="10dp"
                            android:textSize="@dimen/text_size_13"
                            android:textColor="@color/content_txt_black"
                            android:text="@string/new_analyze_guest_win_rate"/>
                        <TextView
                            android:id="@+id/analyze_let_history_guest_win_percent"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="13sp"
                            android:text="--"
                            android:paddingLeft="3dp"
                            android:textColor="@color/mdy_333"
                            />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp">

                        <View
                            android:layout_width="12dp"
                            android:layout_height="12dp"
                            android:background="@color/football_analyze_draw_color"
                            android:layout_gravity="center"
                            />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingLeft="10dp"
                            android:textSize="@dimen/text_size_13"
                            android:textColor="@color/content_txt_black"
                            android:text="@string/analyze_draw_rate"/>
                        <TextView
                            android:id="@+id/analyze_let_history_draw_percent"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="13sp"
                            android:text="--"
                            android:paddingLeft="3dp"
                            android:textColor="@color/mdy_333"
                            />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
            <!--赢 走 输-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >
                <LinearLayout
                    android:layout_width="30dp"
                    android:layout_height="100dp"
                    android:orientation="vertical"
                    style="@style/analyze_ll_let_win_lose"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:text="@string/new_analyze_win"
                        android:gravity="top"
                        android:textSize="@dimen/text_size_13"
                        android:textColor="@color/football_analyze_win_color"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:text="@string/new_analyze_draw"
                        android:gravity="center"
                        android:textSize="@dimen/text_size_13"
                        android:textColor="@color/more_record"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:text="@string/new_analyze_lose"
                        android:gravity="bottom"
                        android:textSize="@dimen/text_size_13"
                        android:textColor="@color/football_analyze_lose_color"
                        />
                </LinearLayout>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    >
                    <com.hhly.mlottery.widget.LineChartView
                        android:id="@+id/chart_let_history"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" />
                    <TextView
                        android:id="@+id/let_nodata1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/basket_nodata"
                        android:layout_centerInParent="true"
                        android:textColor="@color/black_details_ball_textcolor"
                        android:visibility="gone"
                        />
                </RelativeLayout>
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/line_football_footer"/>
            <!--比分 初盘 结果-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >
                <LinearLayout
                    android:layout_width="30dp"
                    android:layout_height="100dp"
                    android:orientation="vertical"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    style="@style/analyze_ll_let_win_lose"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:text="@string/new_analyze_score"
                        android:gravity="center"
                        style="@style/analyze_text_score"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:text="@string/new_analyze_first_let"
                        android:gravity="center"
                        style="@style/analyze_text_score"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:text="@string/new_analyze_result"
                        android:gravity="center"
                        style="@style/analyze_text_score"
                        />
                </LinearLayout>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:paddingTop="10dp"
                    >
                    <com.hhly.mlottery.widget.NoScrollListView
                        android:id="@+id/lv_analyze_let"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:listSelector="#00000000"/>
                    <TextView
                        android:id="@+id/let_nodata2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/basket_nodata"
                        android:layout_centerInParent="true"
                        android:textColor="@color/black_details_ball_textcolor"
                        android:visibility="gone"
                        />
                </RelativeLayout>
            </LinearLayout>
        </LinearLayout>
        <!--近期对比-->
        <LinearLayout
            android:id="@+id/ll_analyze_let_recent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    >
                    <FrameLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:layout_gravity="center"
                        >

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/analyze_let_recent_home_vs_count"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="--"
                                android:layout_gravity="center"/>
                        </LinearLayout>

                        <com.hhly.mlottery.view.RoundProgressBar
                            android:id="@+id/analyze_let_recent_home_progress"
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            android:layout_gravity="center"
                            />
                    </FrameLayout>
                    <TextView
                        android:id="@+id/analyze_let_recent_home_win_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="10dp"
                        android:textSize="13sp"
                        android:text=""
                        android:textColor="@color/mdy_666"
                        />
                </LinearLayout>
                <!--客队赢盘率-->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    >
                    <FrameLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:layout_gravity="center"
                        >

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/analyze_let_recent_guest_vs_count"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="--"
                                android:layout_gravity="center"/>
                        </LinearLayout>

                        <com.hhly.mlottery.view.RoundProgressBar
                            android:id="@+id/analyze_let_recent_guest_progress"
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            android:layout_gravity="center"
                            />
                    </FrameLayout>
                    <TextView
                        android:id="@+id/analyze_let_recent_guest_win_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="10dp"
                        android:textSize="13sp"
                        android:text=""
                        android:textColor="@color/mdy_666"
                        />
                </LinearLayout>

            </LinearLayout>
            <!--赢 走 输-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >
                <LinearLayout
                    android:layout_width="30dp"
                    android:layout_height="100dp"
                    android:orientation="vertical"
                    style="@style/analyze_ll_let_win_lose"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:text="@string/new_analyze_win"
                        android:gravity="top"
                        android:textSize="@dimen/text_size_13"
                        android:textColor="@color/football_analyze_win_color"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:text="@string/new_analyze_draw"
                        android:gravity="center"
                        android:textSize="@dimen/text_size_13"
                        android:textColor="@color/more_record"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:text="@string/new_analyze_lose"
                        android:gravity="bottom"
                        android:textSize="@dimen/text_size_13"
                        android:textColor="@color/football_analyze_lose_color"
                        />
                </LinearLayout>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <TextView
                        android:id="@+id/let_home_team"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:textSize="@dimen/text_size_10"
                        android:textColor="@color/black_details_ball_textcolor"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentRight="true"
                        />
                    <com.hhly.mlottery.widget.LineChartView
                        android:id="@+id/chart_let_home"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" />
                    <TextView
                        android:id="@+id/let_nodata3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/basket_nodata"
                        android:layout_centerInParent="true"
                        android:textColor="@color/black_details_ball_textcolor"
                        android:visibility="gone"
                        />

                </RelativeLayout>
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/line_football_footer"/>
            <!--输赢走-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >
                <LinearLayout
                    android:layout_width="30dp"
                    android:layout_height="100dp"
                    android:orientation="vertical"
                    style="@style/analyze_ll_let_win_lose"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:text="@string/new_analyze_lose"
                        android:gravity="top"
                        android:textSize="@dimen/text_size_13"
                        android:textColor="@color/football_analyze_lose_color"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:text="@string/new_analyze_draw"
                        android:gravity="center"
                        android:textSize="@dimen/text_size_13"
                        android:textColor="@color/more_record"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:text="@string/new_analyze_win"
                        android:gravity="bottom"
                        android:textSize="@dimen/text_size_13"
                        android:textColor="@color/football_analyze_win_color"
                        />
                </LinearLayout>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <TextView
                        android:id="@+id/let_guest_team"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:textSize="@dimen/text_size_10"
                        android:textColor="@color/black_details_ball_textcolor"
                        android:layout_alignParentBottom="true"
                        android:layout_alignParentRight="true"
                        />
                    <com.hhly.mlottery.widget.LineChartView
                        android:id="@+id/chart_let_guest"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" />
                    <TextView
                        android:id="@+id/let_nodata4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/basket_nodata"
                        android:layout_centerInParent="true"
                        android:textColor="@color/black_details_ball_textcolor"
                        android:visibility="gone"
                        />
                </RelativeLayout>
            </LinearLayout>

        </LinearLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="5dp"
            >

            <ImageView
                android:id="@+id/image_small_triangle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:src="@mipmap/small_triangle"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="@string/new_analyze_home"
                android:textSize="@dimen/text_size_10"
                android:textColor="@color/history_win"
                android:layout_toRightOf="@id/image_small_triangle"
                android:paddingLeft="5dp"
                android:id="@+id/textView4" />
            <ImageView
                android:id="@+id/image_small_circular"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:src="@mipmap/small_circular"
                android:layout_toRightOf="@id/textView4"
                android:paddingLeft="10dp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="@string/new_analyze_guest"
                android:textSize="@dimen/text_size_10"
                android:textColor="@color/history_win"
                android:layout_toRightOf="@id/image_small_circular"
                android:paddingLeft="5dp"
                android:id="@+id/textView3" />

            <TextView
                android:id="@+id/analyze_asia_description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/mdy_999"
                android:text="@string/new_analyze_description"
                android:layout_toRightOf="@id/textView3"
                android:textSize="10sp"
                android:paddingLeft="10dp"
                android:visibility="invisible"
                />
        </RelativeLayout>
        <RadioGroup
            android:id="@+id/radio_group_let"
            android:layout_width="260dp"
            android:layout_height="30dp"
            android:layout_margin="10dp"
            android:gravity="center"
            android:layout_gravity="center_horizontal"
            android:orientation="horizontal">

            <!--近期对比-->
            <RadioButton
                android:id="@+id/let_rb_recent"
                style="@style/analyze_radio_button"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/analyze_selected_left"
                android:checked="true"
                android:text="@string/new_analyze_recent_compare"/>

            <!--历史交锋-->
            <RadioButton
                android:id="@+id/let_rb_history"
                style="@style/analyze_radio_button"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/analyze_selected_right"
                android:text="@string/basket_analyze_history"/>

        </RadioGroup>
        <TextView
            android:id="@+id/tv_analyze_more_message1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:paddingBottom="15dp"
            android:text="@string/new_analyze_more_messages"
            android:textColor="@color/more_record"
            android:textSize="@dimen/text_size_13"/>

    </LinearLayout>

    <TextView
        android:id="@+id/let_all_nodata"
        android:layout_width="match_parent"
        android:layout_height="@dimen/basket_analyze_nodata_hight"
        android:paddingBottom="@dimen/basket_details_item_height"
        android:paddingTop="@dimen/basket_details_item_height"
        android:textSize="@dimen/text_size_13"
        android:text="@string/basket_nodata"
        android:textColor="@color/black_details_ball_textcolor"
        android:gravity="center"
        android:visibility="gone"
        />
    <View
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="@color/home_item_bg"
        />

    <!--大小球走势-->
    <include layout="@layout/analyze_size"/>
</LinearLayout>