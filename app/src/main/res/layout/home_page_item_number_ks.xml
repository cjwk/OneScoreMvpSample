<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#fff"
    android:clickable="true"
    android:focusable="true"
    android:orientation="horizontal">
    <!--快三彩票开奖条目-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/y220"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_number_ks_home"
            android:layout_width="@dimen/x140"
            android:layout_height="@dimen/x140"
            android:layout_gravity="center_vertical"
            android:paddingLeft="@dimen/x25"
            android:src="@mipmap/home_number_item_icon_def" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingBottom="@dimen/y20"
            android:paddingLeft="@dimen/x20"
            android:paddingTop="@dimen/y30">

            <!--第一行-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <!--彩种name-->
                <TextView
                    android:id="@+id/tv_number_ks_name_home"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textColor="@color/content_txt_black"
                    android:textSize="@dimen/home_pager_title" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="@dimen/x20"
                    android:text="@string/number_code_di"
                    android:textColor="@color/content_txt_light_grad"
                    android:textSize="@dimen/number_desc" />
                <!--开奖期号-->
                <TextView
                    android:id="@+id/tv_number_issue_ks_home"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="—"
                    android:textColor="@color/content_txt_light_grad"
                    android:textSize="@dimen/number_desc" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/number_code_qi"
                    android:textColor="@color/content_txt_light_grad"
                    android:textSize="@dimen/number_desc" />
            </LinearLayout>
            <!--第二行-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/iv_number_ks01_home"
                    android:layout_width="@dimen/x55"
                    android:layout_height="@dimen/y55"
                    android:layout_marginBottom="@dimen/y10"
                    android:layout_marginTop="@dimen/y10"
                    android:src="@mipmap/number_bg_hk_not" />

                <ImageView
                    android:id="@+id/iv_number_ks02_home"
                    android:layout_width="@dimen/x55"
                    android:layout_height="@dimen/y55"
                    android:layout_marginBottom="@dimen/y10"
                    android:layout_marginLeft="@dimen/x10"
                    android:layout_marginTop="@dimen/y10"
                    android:src="@mipmap/number_bg_hk_not" />

                <ImageView
                    android:id="@+id/iv_number_ks03_home"
                    android:layout_width="@dimen/x55"
                    android:layout_height="@dimen/y55"
                    android:layout_marginBottom="@dimen/y10"
                    android:layout_marginLeft="@dimen/x10"
                    android:layout_marginTop="@dimen/y10"
                    android:src="@mipmap/number_bg_hk_not" />

            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>