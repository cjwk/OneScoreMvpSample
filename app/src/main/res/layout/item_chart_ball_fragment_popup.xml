<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal">


    <TextView
        android:id="@+id/tv_popup_aite"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/basket_text_color"
        android:gravity="center"
        android:paddingBottom="10dp"
        android:paddingTop="5dp"
        android:paddingStart="15dp"
        android:paddingEnd="15dp"
        android:text="@string/chart_ball_call_ta"/>

    <View
        android:id="@+id/view_line"
        android:layout_width="0.5dp"
        android:layout_height="match_parent"
        android:layout_marginBottom="13dp"
        android:layout_marginTop="8dp"
        android:background="@color/res_pl_color"
        />

    <TextView
        android:id="@+id/tv_popup_jubao"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/basket_text_color"
        android:gravity="center"
        android:paddingBottom="10dp"
        android:paddingTop="5dp"
        android:paddingStart="15dp"
        android:paddingEnd="15dp"
        android:text="@string/chart_ball_report"/>

</LinearLayout>