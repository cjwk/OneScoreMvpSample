<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="180dp"
    android:layout_marginBottom="@dimen/football_cardview_margin"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    android:layout_marginTop="@dimen/football_cardview_margin"
    android:background="@drawable/tennis_datails_head"
    android:orientation="vertical">

    <!--联赛名-->
    <TextView
        android:id="@+id/tennis_head_match_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/tennis_datails_title"
        android:ellipsize="end"
        android:gravity="center"
        android:lines="1"
        android:paddingBottom="5dp"
        android:paddingTop="5dp"
        android:textColor="@color/snooker_score_textcolor"
        android:textSize="@dimen/home_pager_title"
        tools:text="国际友谊赛" />


</LinearLayout>
