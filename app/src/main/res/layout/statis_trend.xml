<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp">
    <!--统计布局-->

    <!--内容加载进度条_正在加载中-->
    <FrameLayout
        android:id="@+id/fl_cornerTrend_loading"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone">
        <ProgressBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center" />

    </FrameLayout>
    <!--网络访问失败-->
    <FrameLayout
        android:id="@+id/fl_cornerTrend_networkError"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/refresh" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/x8"
                android:text="@string/exp_net_status_txt"
                android:textColor="@color/version"
                android:textSize="@dimen/text_size_14" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="0dip"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="5dip"
                    android:text="@string/exp__check_txt"
                    android:textColor="@color/msg"
                    android:textSize="@dimen/text_size_14" />

                <TextView
                    android:id="@+id/reLoading"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/exp_refresh_txt"
                    android:textColor="@color/exp_refresh"
                    android:textSize="@dimen/text_size_14" />
            </LinearLayout>
        </LinearLayout>
    </FrameLayout>


    <!--数据统计的弹框 begin-->
    <RelativeLayout
        android:id="@+id/layout_match_bottom"
        style="@style/Style_relative_layout"
        android:visibility="gone">


        <!-- 标题和图片（比赛数据title） -->

        <RelativeLayout
            android:id="@+id/relativelayout_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/y20">


        </RelativeLayout>

        <ScrollView
            android:id="@+id/stadium_scrollview_id"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/relativelayout_id"
            android:scrollbars="none">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <!-- 主队和客队的射门数 begin -->

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/home_team_txt"
                        style="@style/Style_txt1"
                        android:gravity="left" />

                    <TextView
                        style="@style/Style_txt"
                        android:gravity="center"
                        android:text="@string/shoot_txt" />

                    <TextView
                        android:id="@+id/guest_team_txt"
                        style="@style/Style_txt1"
                        android:gravity="right" />
                </LinearLayout>
                <!-- 主队和客队的射门数end -->
                <!-- 主队客队数据view begin -->

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <!-- 主队 射门-->

                    <ProgressBar
                        android:id="@+id/prohome_team"
                        style="@style/StyleProgressBarhome_team24" />

                    <!-- 客队 射门-->

                    <ProgressBar
                        android:id="@+id/proguest_team"
                        style="@style/StyleProgressBarguest_team24" />


                </LinearLayout>
                <!-- 主队客队数据view end -->
                <!-- 扑救 begin -->

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/home_trapping_txt"
                        style="@style/Style_txt1"
                        android:gravity="left" />

                    <TextView
                        style="@style/Style_txt"
                        android:gravity="center"
                        android:text="@string/trapping_txt" />

                    <TextView
                        android:id="@+id/guest_trapping_txt"
                        style="@style/Style_txt1"
                        android:gravity="right" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ProgressBar
                        android:id="@+id/prohome_trapping"
                        style="@style/StyleProgressBarhome_team12" />

                    <ProgressBar
                        android:id="@+id/proguest_trapping"
                        style="@style/StyleProgressBarguest_team12" />
                </LinearLayout>
                <!-- 扑救end -->

                <!-- 犯规begin -->

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/home_foul_txt"
                        style="@style/Style_txt1"
                        android:gravity="left" />

                    <TextView
                        style="@style/Style_txt"
                        android:gravity="center"
                        android:text="@string/foul_txt" />

                    <TextView
                        android:id="@+id/guest_foul_txt"
                        style="@style/Style_txt1"
                        android:gravity="right" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ProgressBar
                        android:id="@+id/prohome_foul"
                        style="@style/StyleProgressBarhome_team24" />

                    <ProgressBar
                        android:id="@+id/proguest_foul"
                        style="@style/StyleProgressBarguest_team24" />
                </LinearLayout>
                <!-- 犯规end -->
                <!-- 越位 begin -->

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/home_offside_txt"
                        style="@style/Style_txt1"
                        android:gravity="left" />

                    <TextView
                        style="@style/Style_txt"
                        android:gravity="center"
                        android:text="@string/away_txt" />

                    <TextView
                        android:id="@+id/guest_offside_txt"
                        style="@style/Style_txt1"
                        android:gravity="right" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ProgressBar
                        android:id="@+id/prohome_offside"
                        style="@style/StyleProgressBarhome_team12" />

                    <ProgressBar
                        android:id="@+id/proguest_offside"
                        style="@style/StyleProgressBarguest_team12" />
                </LinearLayout>
                <!-- 越位end -->
                <!-- 任意球 begin -->

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/home_freeHit_txt"
                        style="@style/Style_txt1"
                        android:gravity="left" />

                    <TextView
                        style="@style/Style_txt"
                        android:gravity="center"
                        android:text="@string/free_hit_txt" />

                    <TextView
                        android:id="@+id/guest_freeHit_txt"
                        style="@style/Style_txt1"
                        android:gravity="right" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ProgressBar
                        android:id="@+id/prohome_freeHit"
                        style="@style/StyleProgressBarhome_team24" />

                    <ProgressBar
                        android:id="@+id/proguest_freeHit"
                        style="@style/StyleProgressBarguest_team24" />
                </LinearLayout>
                <!-- 任意球end -->
                <!-- 界外球 begin -->

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/home_lineout_txt"
                        style="@style/Style_txt1"
                        android:gravity="left" />

                    <TextView
                        style="@style/Style_txt"
                        android:gravity="center"
                        android:text="@string/lineout_txt" />

                    <TextView
                        android:id="@+id/guest_lineout_txt"
                        style="@style/Style_txt1"
                        android:gravity="right" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ProgressBar
                        android:id="@+id/prohome_lineout"
                        style="@style/StyleProgressBarhome_team36" />

                    <ProgressBar
                        android:id="@+id/proguest_lineout"
                        style="@style/StyleProgressBarguest_team36" />
                </LinearLayout>
                <!-- 界外球end -->
            </LinearLayout>
        </ScrollView>

    </RelativeLayout>
    <!--数据统计的弹框 end-->
</RelativeLayout>