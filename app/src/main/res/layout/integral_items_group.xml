<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:id="@+id/integal_group"
              android:orientation="vertical"
              android:background="#fff"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/y20"
        android:background="@color/whitesmoke"/>

    <LinearLayout
        android:id="@+id/integal_rela"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/y75"
        android:orientation="horizontal">

        <LinearLayout
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:layout_weight="3"
            android:id="@+id/integral_team"
            android:layout_width="0dp"
            android:layout_height="match_parent">

            <TextView
                android:layout_marginLeft="5dp"
                android:id="@+id/integral_grouping"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="A"
                android:textSize="@dimen/text_size_13"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_weight="3.8"
            >

            <TextView

                android:gravity="center"
                android:layout_weight="1.8"
                android:id="@+id/integral_round"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="@string/information_integral_game"
                android:textColor="@color/content_txt_light_grad"
                android:textSize="@dimen/text_size_11"/>


                 <TextView
                     android:gravity="center"
                    android:layout_weight="3.4"
                    android:id="@+id/integral_win"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:text="@string/information_integral_win"
                    android:textColor="@color/content_txt_light_grad"
                    android:textSize="@dimen/text_size_11"/>

                <TextView
                    android:gravity="center"
                    android:layout_weight="2.6"
                    android:id="@+id/integral_goal"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:text="@string/information_integral_get"
                    android:textColor="@color/content_txt_light_grad"
                    android:textSize="@dimen/text_size_11"/>


            <TextView
                android:gravity="center"
                android:layout_weight="2"
                android:id="@+id/integral_abs"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:text="@string/information_integral_goal"
                android:textColor="@color/content_txt_light_grad"
                android:textSize="@dimen/text_size_11"/>




            <TextView

                android:gravity="center"
                android:layout_gravity="center_vertical"
                android:layout_weight="2"
                android:id="@+id/integral_score"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="@string/information_integral_minute"
                android:textColor="@color/content_txt_light_grad"
                android:textSize="@dimen/text_size_11"/>

        </LinearLayout>
    </LinearLayout>


</LinearLayout>