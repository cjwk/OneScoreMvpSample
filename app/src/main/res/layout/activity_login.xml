<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"
              android:background="@color/whitesmoke"
              >

    <!--头部条目标题-->
    <include layout="@layout/layout_header" />


    <LinearLayout
        style="@style/login_item_bg"
        android:layout_marginTop="25dp"
        android:orientation="horizontal">

        <ImageView
            style="@style/login_item_image_left"
            android:src="@mipmap/person"/>

        <EditText
            android:id="@+id/et_username"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:inputType="number"
            style="@style/login_edittext_phonenumber"
            android:hint="@string/phone_empty"
            />


        <ImageView
            android:id="@+id/iv_delete"
            style="@style/login_item_image_right"
            android:src="@mipmap/delete"
            android:visibility="gone"/>


    </LinearLayout>

    <LinearLayout
        style="@style/login_item_bg"
        android:layout_marginTop="15dp"
        android:orientation="horizontal">

        <ImageView
            style="@style/login_item_image_left"
            android:src="@mipmap/lock"/>

        <EditText
            android:id="@+id/et_password"
            android:layout_width="0dp"
            style="@style/login_edittext_password"
            android:layout_height="match_parent"
            android:layout_weight="1"/>


        <ImageView
            android:id="@+id/iv_eye"
            style="@style/login_item_image_right"
            android:src="@mipmap/close_eye"/>

    </LinearLayout>



    <TextView
        style="@style/login_edittext_loginbtn"
        android:id="@+id/tv_login"
        android:layout_marginTop="30dp"
        android:text="@string/login"
        />

    <TextView
        android:id="@+id/tv_forgetpw"
        style="@style/login_textview_forget_pw"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="15dp"
        android:paddingBottom="10dp"
        android:layout_gravity="right"
        android:text="@string/forget_pwd"
        />





</LinearLayout>
