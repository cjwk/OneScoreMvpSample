<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RadioGroup
        android:id="@+id/radio_group"
        android:layout_width="match_parent"
        android:layout_height="25dp"
        android:layout_marginBottom="13dp"
        android:layout_marginTop="13dp"
        android:gravity="center"
        android:orientation="horizontal"
        android:weightSum="4">

        <RadioButton
            android:id="@+id/live_event"
            style="@style/odds_radio_button"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginRight="-0.25dp"
            android:background="@drawable/shape_basketball_infomation_left"
            android:checked="true"
            android:text="@string/foot_event"
            android:textColor="@drawable/info_text_color" />

        <RadioButton
            android:id="@+id/live_statistics"
            style="@style/odds_radio_button"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="-0.25dp"
            android:background="@drawable/shape_basketball_infomation_right"
            android:checked="false"
            android:text="@string/foot_statictics"
            android:textColor="@drawable/info_text_color" />
    </RadioGroup>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/radio_group"
        android:orientation="vertical">

        <android.support.v4.widget.NestedScrollView
            android:id="@+id/nested_scroll_view_nodata"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:visibility="gone">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="@string/foot_event_nomatchstate" />

        </android.support.v4.widget.NestedScrollView>

        <android.support.v4.widget.NestedScrollView
            android:id="@+id/nested_scroll_view_event"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:visibility="visible">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/recycler_view"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="15dp"></android.support.v7.widget.RecyclerView>


                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="@color/linecolor"></View>


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:orientation="horizontal"
                    android:paddingBottom="10dp"
                    android:paddingTop="10dp">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@mipmap/event_goal" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="2dp"
                        android:text="@string/foot_event_goal"
                        android:textColor="@color/res_pl_color"
                        android:textSize="@dimen/text_size_10" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="6dp"
                        android:src="@mipmap/event_rc" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="2dp"
                        android:text="@string/foot_event_rc"
                        android:textColor="@color/res_pl_color"
                        android:textSize="@dimen/text_size_10" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="6dp"
                        android:src="@mipmap/event_yc" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="2dp"
                        android:text="@string/foot_event_yc"
                        android:textColor="@color/res_pl_color"
                        android:textSize="@dimen/text_size_10" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="6dp"
                        android:src="@mipmap/event_ytor" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="2dp"
                        android:text="@string/foot_event_ytor"
                        android:textColor="@color/res_pl_color"
                        android:textSize="@dimen/text_size_10" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="6dp"
                        android:src="@mipmap/event_player" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="2dp"
                        android:text="@string/foot_event_player"
                        android:textColor="@color/res_pl_color"
                        android:textSize="@dimen/text_size_10" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="6dp"
                        android:src="@mipmap/event_corner" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="2dp"
                        android:text="@string/foot_event_corner"
                        android:textColor="@color/res_pl_color"
                        android:textSize="@dimen/text_size_10" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="6dp"
                        android:src="@mipmap/event_half" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="2dp"
                        android:text="@string/foot_event_half"
                        android:textColor="@color/res_pl_color"
                        android:textSize="@dimen/text_size_10" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="6dp"
                        android:src="@mipmap/event_finish" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="2dp"
                        android:text="@string/foot_event_finish"
                        android:textColor="@color/res_pl_color"
                        android:textSize="@dimen/text_size_10" />
                </LinearLayout>

                <RelativeLayout
                    android:id="@+id/statistics"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp">
                    <!--统计布局-->

                    <!--内容加载进度条_正在加载中-->
                    <FrameLayout
                        android:id="@+id/fl_cornerTrend_loading"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:visibility="gone">

                        <ProgressBar
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center" />

                    </FrameLayout>
                    <!--网络访问失败-->
                    <FrameLayout
                        android:id="@+id/fl_cornerTrend_networkError"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:visibility="gone">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:orientation="vertical">

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@mipmap/refresh" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="4dp"
                                android:text="@string/exp_net_status_txt"
                                android:textColor="@color/version"
                                android:textSize="@dimen/text_size_14" />

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="0dip"
                                android:gravity="center"
                                android:orientation="horizontal">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginRight="5dip"
                                    android:text="@string/exp__check_txt"
                                    android:textColor="@color/msg"
                                    android:textSize="@dimen/text_size_14" />

                                <TextView
                                    android:id="@+id/reLoadin"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/exp_refresh_txt"
                                    android:textColor="@color/exp_refresh"
                                    android:textSize="@dimen/text_size_14" />
                            </LinearLayout>
                        </LinearLayout>
                    </FrameLayout>


                    <!--数据统计的弹框 begin-->
                    <RelativeLayout
                        android:id="@+id/layout_match_bottom"
                        style="@style/Style_relative_layout"
                        android:layout_marginTop="20dp"
                        android:visibility="visible">


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">
                            <!-- 主队和客队的射门数 begin -->

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:orientation="horizontal">

                                <TextView
                                    android:id="@+id/home_team_txt"
                                    style="@style/Style_txt1"
                                    android:gravity="left" />

                                <TextView
                                    style="@style/Style_txt"
                                    android:gravity="center"
                                    android:text="@string/shoot_txt" />

                                <TextView
                                    android:id="@+id/guest_team_txt"
                                    style="@style/Style_txt1"
                                    android:gravity="right" />
                            </LinearLayout>
                            <!-- 主队和客队的射门数end -->
                            <!-- 主队客队数据view begin -->

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">

                                <!-- 主队 射门-->

                                <ProgressBar
                                    android:id="@+id/prohome_team"
                                    style="@style/StyleProgressBarguest_statics" />

                                <!-- 客队 射门-->


                            </LinearLayout>
                            <!-- 主队客队数据view end -->
                            <!-- 扑救 begin -->

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:orientation="horizontal">

                                <TextView
                                    android:id="@+id/home_trapping_txt"
                                    style="@style/Style_txt1"
                                    android:gravity="left" />

                                <TextView
                                    style="@style/Style_txt"
                                    android:gravity="center"
                                    android:text="@string/trapping_txt" />

                                <TextView
                                    android:id="@+id/guest_trapping_txt"
                                    style="@style/Style_txt1"
                                    android:gravity="right" />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">

                                <ProgressBar
                                    android:id="@+id/prohome_trapping"
                                    style="@style/StyleProgressBarguest_statics" />

                            </LinearLayout>
                            <!-- 扑救end -->

                            <!-- 犯规begin -->

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:orientation="horizontal">

                                <TextView
                                    android:id="@+id/home_foul_txt"
                                    style="@style/Style_txt1"
                                    android:gravity="left" />

                                <TextView
                                    style="@style/Style_txt"
                                    android:gravity="center"
                                    android:text="@string/foul_txt" />

                                <TextView
                                    android:id="@+id/guest_foul_txt"
                                    style="@style/Style_txt1"
                                    android:gravity="right" />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">

                                <ProgressBar
                                    android:id="@+id/prohome_foul"
                                    style="@style/StyleProgressBarguest_statics" />
                            </LinearLayout>
                            <!-- 犯规end -->
                            <!-- 越位 begin -->

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:orientation="horizontal">

                                <TextView
                                    android:id="@+id/home_offside_txt"
                                    style="@style/Style_txt1"
                                    android:gravity="left" />

                                <TextView
                                    style="@style/Style_txt"
                                    android:gravity="center"
                                    android:text="@string/away_txt" />

                                <TextView
                                    android:id="@+id/guest_offside_txt"
                                    style="@style/Style_txt1"
                                    android:gravity="right" />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">

                                <ProgressBar
                                    android:id="@+id/prohome_offside"
                                    style="@style/StyleProgressBarguest_statics" />


                            </LinearLayout>
                            <!-- 越位end -->
                            <!-- 任意球 begin -->

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:orientation="horizontal">

                                <TextView
                                    android:id="@+id/home_freeHit_txt"
                                    style="@style/Style_txt1"
                                    android:gravity="left" />

                                <TextView
                                    style="@style/Style_txt"
                                    android:gravity="center"
                                    android:text="@string/free_hit_txt" />

                                <TextView
                                    android:id="@+id/guest_freeHit_txt"
                                    style="@style/Style_txt1"
                                    android:gravity="right" />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">

                                <ProgressBar
                                    android:id="@+id/prohome_freeHit"
                                    style="@style/StyleProgressBarguest_statics" />


                            </LinearLayout>
                            <!-- 任意球end -->
                            <!-- 界外球 begin -->

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:orientation="horizontal">

                                <TextView
                                    android:id="@+id/home_lineout_txt"
                                    style="@style/Style_txt1"
                                    android:gravity="left" />

                                <TextView
                                    style="@style/Style_txt"
                                    android:gravity="center"
                                    android:text="@string/lineout_txt" />

                                <TextView
                                    android:id="@+id/guest_lineout_txt"
                                    style="@style/Style_txt1"
                                    android:gravity="right" />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">

                                <ProgressBar
                                    android:id="@+id/prohome_lineout"
                                    style="@style/StyleProgressBarguest_statics" />
                            </LinearLayout>
                            <!-- 界外球end -->
                        </LinearLayout>

                    </RelativeLayout>
                    <!--数据统计的弹框 end-->
                </RelativeLayout>

            </LinearLayout>

        </android.support.v4.widget.NestedScrollView>


        <android.support.v4.widget.NestedScrollView
            android:id="@+id/nested_scroll_view_trend"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="gone">

            <RelativeLayout
                android:id="@+id/trend"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <!--走势布局-->

                <!--内容加载进度条_正在加载中-->
                <FrameLayout
                    android:id="@+id/fl_attackTrend_loading"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:visibility="gone">

                    <ProgressBar
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center" />
                </FrameLayout>
                <!--网络访问失败-->
                <FrameLayout
                    android:id="@+id/fl_attackTrend_networkError"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:visibility="gone">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@mipmap/refresh" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="4dp"
                            android:text="@string/exp_net_status_txt"
                            android:textColor="@color/version"
                            android:textSize="@dimen/text_size_14" />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="0dip"
                            android:gravity="center"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginRight="5dip"
                                android:text="@string/exp__check_txt"
                                android:textColor="@color/msg"
                                android:textSize="@dimen/text_size_14" />

                            <TextView
                                android:id="@+id/reLoading"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/exp_refresh_txt"
                                android:textColor="@color/exp_refresh"
                                android:textSize="@dimen/text_size_14" />
                        </LinearLayout>
                    </LinearLayout>
                </FrameLayout>

                <!--走势图-->
                <LinearLayout
                    android:id="@+id/ll_trend_main"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:orientation="vertical"
                    android:visibility="visible">

                    <com.github.mikephil.charting.charts.LineChart
                        android:id="@+id/chart_shoot"
                        android:layout_width="match_parent"
                        android:layout_height="200dp"></com.github.mikephil.charting.charts.LineChart>

                    <com.github.mikephil.charting.charts.LineChart
                        android:id="@+id/chart_shootAside"
                        android:layout_width="match_parent"
                        android:layout_height="200dp"></com.github.mikephil.charting.charts.LineChart>

                    <com.github.mikephil.charting.charts.LineChart
                        android:id="@+id/chart_dangerousAttack"
                        android:layout_width="match_parent"
                        android:layout_height="200dp"></com.github.mikephil.charting.charts.LineChart>

                    <com.github.mikephil.charting.charts.LineChart
                        android:id="@+id/chart_attack"
                        android:layout_width="match_parent"
                        android:layout_height="200dp"></com.github.mikephil.charting.charts.LineChart>

                </LinearLayout>
            </RelativeLayout>

        </android.support.v4.widget.NestedScrollView>

    </LinearLayout>


</RelativeLayout>