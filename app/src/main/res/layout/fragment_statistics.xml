<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp">
            <!--走势布局-->

            <!--内容加载进度条_正在加载中-->
            <FrameLayout
                android:id="@+id/fl_attackTrend_loading"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:visibility="gone">

                <ProgressBar
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center" />
            </FrameLayout>
            <!--网络访问失败-->
            <FrameLayout
                android:id="@+id/fl_attackTrend_networkError"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:visibility="gone">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@mipmap/refresh" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/x8"
                        android:text="@string/exp_net_status_txt"
                        android:textColor="@color/version"
                        android:textSize="@dimen/text_size_14" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="0dip"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="5dip"
                            android:text="@string/exp__check_txt"
                            android:textColor="@color/msg"
                            android:textSize="@dimen/text_size_14" />

                        <TextView
                            android:id="@+id/reLoading"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/exp_refresh_txt"
                            android:textColor="@color/exp_refresh"
                            android:textSize="@dimen/text_size_14" />
                    </LinearLayout>
                </LinearLayout>
            </FrameLayout>

            <!--走势图-->
            <LinearLayout
                android:id="@+id/ll_trend_main"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="vertical"
                android:visibility="visible">
                <!--角球折线图走势-->
                <RelativeLayout
                    android:id="@+id/rl_cornerTrend_data"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:visibility="visible">

                    <FrameLayout
                        android:id="@+id/fl_main_corner"
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/x440"
                        android:paddingLeft="@dimen/x80"
                        android:paddingRight="@dimen/x40"></FrameLayout>

                    <LinearLayout
                        android:id="@+id/ll_time_name_corner"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/fl_main_corner"
                        android:orientation="horizontal"
                        android:paddingBottom="@dimen/y20"
                        android:paddingLeft="@dimen/x120">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/homeTeam"
                            android:textColor="@color/firstPlayers_homeTeam_bg"
                            android:textSize="@dimen/number_desc" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingLeft="25dip"
                            android:text="@string/guestTeam"
                            android:textColor="@color/firstPlayers_visitingTeam_bg"
                            android:textSize="@dimen/number_desc" />
                    </LinearLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingLeft="@dimen/x30"
                        android:paddingTop="@dimen/y20"
                        android:text="@string/corner"
                        android:textColor="@color/res_pl_color"
                        android:textSize="@dimen/number_desc" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_above="@id/ll_time_name_corner"
                        android:layout_alignParentRight="true"
                        android:paddingRight="@dimen/x140"
                        android:text="@string/game_time"
                        android:textColor="@color/res_pl_color"
                        android:textSize="@dimen/number_desc" />

                </RelativeLayout>
                <!--攻防折线图走势-->
                <RelativeLayout
                    android:id="@+id/rl_attackTrend_data"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:visibility="visible">

                    <FrameLayout
                        android:id="@+id/fl_main"
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/x440"
                        android:paddingLeft="@dimen/x80"
                        android:paddingRight="@dimen/x40"></FrameLayout>

                    <LinearLayout
                        android:id="@+id/ll_time_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/fl_main"
                        android:orientation="horizontal"
                        android:paddingBottom="@dimen/y20"
                        android:paddingLeft="@dimen/x120">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/homeTeam"
                            android:textColor="@color/firstPlayers_homeTeam_bg"
                            android:textSize="@dimen/number_desc" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingLeft="25dip"
                            android:text="@string/guestTeam"
                            android:textColor="@color/firstPlayers_visitingTeam_bg"
                            android:textSize="@dimen/number_desc" />
                    </LinearLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingLeft="@dimen/x30"
                        android:paddingTop="@dimen/y20"
                        android:text="@string/attack"
                        android:textColor="@color/res_pl_color"
                        android:textSize="@dimen/number_desc" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_above="@id/ll_time_name"
                        android:layout_alignParentRight="true"
                        android:paddingRight="@dimen/x140"
                        android:text="@string/game_time"
                        android:textColor="@color/res_pl_color"
                        android:textSize="@dimen/number_desc" />
                </RelativeLayout>
            </LinearLayout>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp">
            <!--统计布局-->

            <!--内容加载进度条_正在加载中-->
            <FrameLayout
                android:id="@+id/fl_cornerTrend_loading"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:visibility="gone">

                <ProgressBar
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center" />

            </FrameLayout>
            <!--网络访问失败-->
            <FrameLayout
                android:id="@+id/fl_cornerTrend_networkError"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:visibility="gone">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@mipmap/refresh" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/x8"
                        android:text="@string/exp_net_status_txt"
                        android:textColor="@color/version"
                        android:textSize="@dimen/text_size_14" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="0dip"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="5dip"
                            android:text="@string/exp__check_txt"
                            android:textColor="@color/msg"
                            android:textSize="@dimen/text_size_14" />

                        <TextView
                            android:id="@+id/reLoadin"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/exp_refresh_txt"
                            android:textColor="@color/exp_refresh"
                            android:textSize="@dimen/text_size_14" />
                    </LinearLayout>
                </LinearLayout>
            </FrameLayout>


            <!--数据统计的弹框 begin-->
            <RelativeLayout
                android:id="@+id/layout_match_bottom"
                style="@style/Style_relative_layout"
                android:layout_marginTop="20dp"
                android:visibility="visible">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <!-- 主队和客队的射门数 begin -->

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/home_team_txt"
                            style="@style/Style_txt1"
                            android:gravity="left" />

                        <TextView
                            style="@style/Style_txt"
                            android:gravity="center"
                            android:text="@string/shoot_txt" />

                        <TextView
                            android:id="@+id/guest_team_txt"
                            style="@style/Style_txt1"
                            android:gravity="right" />
                    </LinearLayout>
                    <!-- 主队和客队的射门数end -->
                    <!-- 主队客队数据view begin -->

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <!-- 主队 射门-->

                        <ProgressBar
                            android:id="@+id/prohome_team"
                            style="@style/StyleProgressBarguest_statics" />

                        <!-- 客队 射门-->


                    </LinearLayout>
                    <!-- 主队客队数据view end -->
                    <!-- 扑救 begin -->

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/home_trapping_txt"
                            style="@style/Style_txt1"
                            android:gravity="left" />

                        <TextView
                            style="@style/Style_txt"
                            android:gravity="center"
                            android:text="@string/trapping_txt" />

                        <TextView
                            android:id="@+id/guest_trapping_txt"
                            style="@style/Style_txt1"
                            android:gravity="right" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <ProgressBar
                            android:id="@+id/prohome_trapping"
                            style="@style/StyleProgressBarguest_statics" />

                    </LinearLayout>
                    <!-- 扑救end -->

                    <!-- 犯规begin -->

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/home_foul_txt"
                            style="@style/Style_txt1"
                            android:gravity="left" />

                        <TextView
                            style="@style/Style_txt"
                            android:gravity="center"
                            android:text="@string/foul_txt" />

                        <TextView
                            android:id="@+id/guest_foul_txt"
                            style="@style/Style_txt1"
                            android:gravity="right" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <ProgressBar
                            android:id="@+id/prohome_foul"
                            style="@style/StyleProgressBarguest_statics" />
                    </LinearLayout>
                    <!-- 犯规end -->
                    <!-- 越位 begin -->

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/home_offside_txt"
                            style="@style/Style_txt1"
                            android:gravity="left" />

                        <TextView
                            style="@style/Style_txt"
                            android:gravity="center"
                            android:text="@string/away_txt" />

                        <TextView
                            android:id="@+id/guest_offside_txt"
                            style="@style/Style_txt1"
                            android:gravity="right" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <ProgressBar
                            android:id="@+id/prohome_offside"
                            style="@style/StyleProgressBarguest_statics" />


                    </LinearLayout>
                    <!-- 越位end -->
                    <!-- 任意球 begin -->

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/home_freeHit_txt"
                            style="@style/Style_txt1"
                            android:gravity="left" />

                        <TextView
                            style="@style/Style_txt"
                            android:gravity="center"
                            android:text="@string/free_hit_txt" />

                        <TextView
                            android:id="@+id/guest_freeHit_txt"
                            style="@style/Style_txt1"
                            android:gravity="right" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <ProgressBar
                            android:id="@+id/prohome_freeHit"
                            style="@style/StyleProgressBarguest_statics" />


                    </LinearLayout>
                    <!-- 任意球end -->
                    <!-- 界外球 begin -->

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/home_lineout_txt"
                            style="@style/Style_txt1"
                            android:gravity="left" />

                        <TextView
                            style="@style/Style_txt"
                            android:gravity="center"
                            android:text="@string/lineout_txt" />

                        <TextView
                            android:id="@+id/guest_lineout_txt"
                            style="@style/Style_txt1"
                            android:gravity="right" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <ProgressBar
                            android:id="@+id/prohome_lineout"
                            style="@style/StyleProgressBarguest_statics" />
                    </LinearLayout>
                    <!-- 界外球end -->
                </LinearLayout>

            </RelativeLayout>
            <!--数据统计的弹框 end-->
        </RelativeLayout>


    </LinearLayout>

</android.support.v4.widget.NestedScrollView>