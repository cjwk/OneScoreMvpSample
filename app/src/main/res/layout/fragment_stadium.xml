<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:mdy="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include layout="@layout/fragment_prestadium" />


    <RelativeLayout
        android:id="@+id/stadium_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/match_ll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/match_deilse"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/iv_home_yc"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentLeft="true"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="10dp"
                            android:background="@mipmap/yc_big" />


                        <TextView
                            android:id="@+id/tv_home_yc"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="@dimen/x10"
                            android:layout_toRightOf="@+id/iv_home_yc"
                            android:text="0"
                            android:textSize="@dimen/text_size_15" />


                        <ImageView
                            android:id="@+id/iv_home_rc"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="@dimen/x15"
                            android:layout_toRightOf="@+id/tv_home_yc"
                            android:background="@mipmap/rc_big" />


                        <TextView
                            android:id="@+id/tv_home_rc"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="@dimen/x10"
                            android:layout_toRightOf="@+id/iv_home_rc"
                            android:text="0"
                            android:textSize="@dimen/text_size_15" />


                        <ImageView
                            android:id="@+id/iv_home_corner"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="@dimen/x15"
                            android:layout_toRightOf="@+id/tv_home_rc"
                            android:background="@mipmap/corner" />

                        <TextView
                            android:id="@+id/tv_home_corner"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="@dimen/x10"
                            android:layout_toRightOf="@+id/iv_home_corner"
                            android:text="0"
                            android:textSize="@dimen/text_size_15" />


                    </RelativeLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_horizontal"
                    android:layout_weight="1"
                    android:background="@mipmap/score_bg"
                    android:gravity="center"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:weightSum="8">

                        <RelativeLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="2">

                            <TextView
                                android:id="@+id/home_score"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerInParent="true"
                                android:text="0"
                                android:textColor="@color/white"
                                android:textSize="30dp" />
                        </RelativeLayout>

                        <LinearLayout
                            android:id="@+id/ll_score"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_weight="4"
                            android:gravity="center"
                            android:orientation="vertical">

                            <RelativeLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content">

                                <TextView
                                    android:id="@+id/keepTime"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_horizontal"
                                    android:text="0"
                                    android:textColor="@color/white"
                                    android:textSize="13sp" />

                                <TextView
                                    android:id="@+id/tv_frequency"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_toRightOf="@id/keepTime"
                                    android:text="'"
                                    android:textColor="@color/white"
                                    android:textSize="13sp" />

                            </RelativeLayout>

                            <TextView
                                android:id="@+id/halfScore"

                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="(10:10)"
                                android:textColor="@color/white"
                                android:textSize="13sp"
                                android:visibility="gone" />
                        </LinearLayout>

                        <RelativeLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="2">

                            <TextView
                                android:id="@+id/guest_score"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerInParent="true"
                                android:text="0"
                                android:textColor="@color/white"
                                android:textSize="30dp" />
                        </RelativeLayout>
                    </LinearLayout>


                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/tv_guest_yc"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:layout_marginRight="10dp"
                            android:text="0"
                            android:textSize="@dimen/text_size_15" />

                        <ImageView
                            android:id="@+id/iv_guest_yc"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginRight="@dimen/x10"
                            android:layout_toLeftOf="@+id/tv_guest_yc"
                            android:background="@mipmap/yc_big" />


                        <TextView
                            android:id="@+id/tv_guest_rc"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginRight="@dimen/x15"
                            android:layout_toLeftOf="@+id/iv_guest_yc"
                            android:text="0"
                            android:textSize="@dimen/text_size_15" />


                        <ImageView
                            android:id="@+id/iv_guest_rc"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginRight="@dimen/x10"
                            android:layout_toLeftOf="@+id/tv_guest_rc"
                            android:background="@mipmap/rc_big" />


                        <TextView
                            android:id="@+id/tv_guest_corner"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginRight="@dimen/x15"
                            android:layout_toLeftOf="@id/iv_guest_rc"
                            android:text="0"
                            android:textSize="@dimen/text_size_15" />


                        <ImageView
                            android:id="@+id/iv_guest_corner"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginRight="@dimen/x10"
                            android:layout_toLeftOf="@id/tv_guest_corner"
                            android:background="@mipmap/corner" />


                    </RelativeLayout>
                </LinearLayout>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.4dp"
                android:background="@color/line_football_footer" />


            <View
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:background="@color/bot" />

            <LinearLayout
                android:id="@+id/tv_out"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:gravity="center_vertical"
                android:orientation="vertical"
                android:visibility="gone">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:background="@mipmap/push"
                    android:gravity="center_vertical"></ImageView>
            </LinearLayout>


            <LinearLayout
                android:id="@+id/ll_envet"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <com.hhly.mlottery.widget.FootballEventView
                        android:id="@+id/time_layout_top"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/y40"
                        mdy:image_gravity="b"
                        mdy:mdymargin="@dimen/x20"
                        mdy:midwidth_proportion="30" />

                    <com.hhly.mlottery.widget.TimeView
                        android:id="@+id/time_football"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/y25"
                        android:layout_marginLeft="@dimen/x20"
                        android:layout_marginRight="@dimen/x20"
                        android:background="@drawable/timeview_bg"
                        mdy:time_midwidth_proportion="30"
                        mdy:time_textsize="@dimen/text_size_10" />

                    <com.hhly.mlottery.widget.FootballEventView
                        android:id="@+id/time_layout_bottom"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/y40"
                        mdy:image_gravity="t"
                        mdy:mdymargin="@dimen/x20"
                        mdy:midwidth_proportion="30" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">


                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/home_danger_attack"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:gravity="left"
                                android:text="0"
                                android:textSize="@dimen/text_size_10"
                                android:textColor="@color/progress_score" />

                            <TextView
                                android:id="@+id/textView2"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:text="@string/danger_attack_txt"
                                android:textSize="@dimen/text_size_10"

                                android:textColor="@color/progress_name" />

                            <TextView
                                android:id="@+id/guest_danger_attack"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:gravity="right"
                                android:textSize="@dimen/text_size_10"

                                android:text="0"
                                android:textColor="@color/progress_score" />
                        </LinearLayout>

                        <ProgressBar
                            android:id="@+id/pb_danger_attack"
                            style="?android:attr/progressBarStyleHorizontal"
                            android:layout_width="fill_parent"
                            android:layout_height="5dp"
                            android:max="100"
                            android:progress="25"
                            android:progressDrawable="@drawable/pro" />
                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/home_shoot_correct"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:gravity="left"
                                android:text="0"
                                android:textSize="@dimen/text_size_10"
                                android:textColor="@color/progress_score" />

                            <TextView
                                android:id="@+id/textVi"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:textSize="@dimen/text_size_10"
                                android:text="@string/shoot_correct_txt"
                                android:textColor="@color/progress_name" />

                            <TextView
                                android:id="@+id/guest_shoot_correct"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:gravity="right"
                                android:text="0"
                                android:textSize="@dimen/text_size_10"

                                android:textColor="@color/progress_score" />
                        </LinearLayout>

                        <ProgressBar
                            android:id="@+id/pb_shoot_correct"
                            style="?android:attr/progressBarStyleHorizontal"
                            android:layout_width="fill_parent"
                            android:layout_height="5dp"
                            android:max="100"
                            android:progress="66"
                            android:progressDrawable="@drawable/pro" />
                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="10dp"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/home_shoot_miss"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:gravity="left"
                                android:text="0"
                                android:textSize="@dimen/text_size_10"
                                android:textColor="@color/progress_score" />

                            <TextView
                                android:id="@+id/textV"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:textSize="@dimen/text_size_10"
                                android:text="@string/shoot_miss_txt"
                                android:textColor="@color/progress_name" />

                            <TextView
                                android:id="@+id/guest_shoot_miss"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:gravity="right"
                                android:text="0"
                                android:textSize="@dimen/text_size_10"
                                android:textColor="@color/progress_score" />
                        </LinearLayout>

                        <ProgressBar
                            android:id="@+id/pb_shoot_miss"
                            style="?android:attr/progressBarStyleHorizontal"
                            android:layout_width="fill_parent"
                            android:layout_height="5dp"
                            android:max="100"
                            android:progress="50"
                            android:progressDrawable="@drawable/pro" />
                    </LinearLayout>


                </LinearLayout>


                <LinearLayout
                    android:id="@+id/tv_in"
                    android:layout_width="match_parent"
                    android:layout_height="20dp"
                    android:gravity="center_vertical"
                    android:orientation="vertical">

                    <ImageView

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:background="@mipmap/pull_up"
                        android:gravity="center_vertical" />
                </LinearLayout>


            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:background="@color/bot"/>
        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/match_ll"
            android:layout_marginTop="10dp">


            <LinearLayout
                android:id="@+id/tabhost"
                android:layout_width="match_parent"
                android:layout_height="@dimen/y65"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="@dimen/x24"
                android:layout_marginRight="@dimen/x24"
                android:gravity="center"
                android:orientation="horizontal">


                <RadioGroup
                    android:id="@+id/radioGroup"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <RadioButton
                        android:id="@+id/rb_live_text"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@drawable/rb_live_text"
                        android:button="@null"
                        android:checked="true"
                        android:gravity="center"
                        android:text="@string/live_text_txt"
                        android:textColor="@drawable/rb_txtcolor"
                        android:textSize="@dimen/text_size_13" />

                    <RadioButton
                        android:id="@+id/rb_corner_trend"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@drawable/rb_corner_trend"
                        android:button="@null"
                        android:gravity="center"
                        android:text="@string/statistics_txt"
                        android:textColor="@drawable/rb_txtcolor"
                        android:textSize="@dimen/text_size_13" />

                    <RadioButton
                        android:id="@+id/rb_first_players"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@drawable/rb_first_players"
                        android:button="@null"
                        android:gravity="center"
                        android:text="@string/first_players_txt"
                        android:textColor="@drawable/rb_txtcolor"
                        android:textSize="@dimen/text_size_13" />

                    <RadioButton
                        android:id="@+id/rb_attack_trend"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@drawable/rb_attack_trend"
                        android:button="@null"
                        android:gravity="center"
                        android:text="@string/trend_txt"
                        android:textColor="@drawable/rb_txtcolor"
                        android:textSize="@dimen/text_size_13" />
                </RadioGroup>
            </LinearLayout>


            <FrameLayout
                android:id="@+id/frame_content"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@id/tabhost" />

            <FrameLayout
                android:id="@+id/frame_content_players"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@id/tabhost"
                android:visibility="gone" />

            <FrameLayout
                android:id="@+id/frame_content_corner"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@id/tabhost"
                android:visibility="gone" />

            <FrameLayout
                android:id="@+id/frame_content_attack"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@id/tabhost"
                android:visibility="gone" />


        </RelativeLayout>


    </RelativeLayout>
</FrameLayout>