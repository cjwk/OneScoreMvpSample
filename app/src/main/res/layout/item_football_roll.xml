<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/Md.Card"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/home_item_bg">

        <LinearLayout
            android:id="@+id/ll1"
            style="@style/item_rollball_linearlayout"
            android:background="@color/white">

            <TextView
                android:id="@+id/tvTournament"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/activity_margin_half"
                android:layout_marginTop="@dimen/activity_horizontal_margin"
                android:ellipsize="end"
                android:maxLines="1"
                android:maxWidth="75dp"
                android:text="欧罗巴杯"
                android:textColor="@color/orange"
                android:textSize="@dimen/text_size_11"
                />

            <TextView
                android:id="@+id/tvTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/activity_margin_half"
                android:layout_marginTop="12dp"
                android:text="01:30"
                android:textColor="@color/res_time_color"
                android:textSize="@dimen/text_size_13"
                />

            <ImageView
                android:id="@+id/ivItemPositionControl"
                android:layout_width="22dp"
                android:layout_height="22dp"
                android:layout_marginLeft="@dimen/activity_margin_half"
                android:layout_marginTop="10dp"
                android:src="@mipmap/roll_default"/>
        </LinearLayout>

        <LinearLayout
            style="@style/item_rollball_linearlayout"
            android:background="@color/white"
            android:paddingLeft="10dp"
            android:paddingRight="10dp">

            <TextView
                android:id="@+id/tvScoreUp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/activity_horizontal_margin"
                android:text="1"
                android:textColor="@color/text_about_color"
                android:textSize="@dimen/text_size_13"
                />

            <TextView
                android:id="@+id/tvSpedingTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:text="63'"
                android:textColor="@color/text_about_color"
                android:textSize="@dimen/text_size_13"
                />

            <TextView
                android:id="@+id/tvScoreDown"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:text="1"
                android:textColor="@color/text_about_color"
                android:textSize="@dimen/text_size_13"
                />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll2"
            style="@style/item_rollball_linearlayout"
            android:layout_marginLeft="1dp"
            android:layout_toRightOf="@id/ll1">

            <RelativeLayout
                style="@style/MW_White">

                <TextView
                    android:id="@+id/tvTeamUp"
                    style="@style/item_rollball_MeasureSpec_EXACTLY"
                    android:layout_marginBottom="10dp"
                    android:layout_marginLeft="@dimen/activity_margin_half"
                    android:layout_marginTop="10dp"
                    android:text="皇家马德里"
                    />

                <TextView
                    android:id="@+id/tvTeamUPScore1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="5dp"
                    android:layout_toRightOf="@+id/tvTeamUp"
                    android:background="@color/yellow"
                    android:text="1"
                    android:textColor="@color/white"
                    android:textSize="13sp"/>

                <TextView
                    android:id="@+id/tvTeamUpScore2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="@dimen/activity_margin_half"
                    android:layout_toRightOf="@+id/tvTeamUPScore1"
                    android:background="@color/red"
                    android:text="0"
                    android:textColor="@color/white"
                    android:textSize="13sp"/>
            </RelativeLayout>

            <RelativeLayout
                style="@style/MW_White"
                android:layout_marginTop="1dp">

                <TextView
                    android:id="@+id/tvSpace"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:layout_marginLeft="@dimen/activity_margin_half"
                    android:layout_marginTop="10dp"
                    android:text="半场"
                    android:textColor="@color/red"
                    android:textSize="@dimen/text_size_13"
                    />

                <TextView
                    android:id="@+id/tvMiddleScore1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="5dp"
                    android:layout_toRightOf="@+id/tvSpace"
                    android:padding="1dp"
                    android:text="1"
                    android:textColor="@color/red"
                    android:textSize="@dimen/text_size_11"/>

                <TextView
                    android:id="@+id/spec"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@+id/tvMiddleScore1"
                    android:padding="1dp"
                    android:text="-"
                    android:textColor="@color/red"
                    android:textSize="@dimen/text_size_11"/>

                <TextView
                    android:id="@+id/tvMiddleScore2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/activity_margin_half"
                    android:layout_toRightOf="@+id/spec"
                    android:padding="1dp"
                    android:text="0"
                    android:textColor="@color/red"
                    android:textSize="@dimen/text_size_11"/>
            </RelativeLayout>

            <RelativeLayout
                style="@style/MW_White"
                android:layout_marginTop="1dp">

                <TextView
                    android:id="@+id/tvTeamDown"
                    style="@style/item_rollball_MeasureSpec_EXACTLY"
                    android:layout_marginBottom="10dp"
                    android:layout_marginLeft="@dimen/activity_margin_half"
                    android:layout_marginTop="10dp"
                    android:text="巴萨"
                    />

                <TextView
                    android:id="@+id/tvTeamDownScore1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="5dp"
                    android:layout_toRightOf="@+id/tvTeamDown"
                    android:background="@color/yellow"
                    android:text="1"
                    android:textColor="@color/white"
                    android:textSize="13sp"/>

                <TextView
                    android:id="@+id/tvTeamDownScore2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="@dimen/activity_margin_half"
                    android:layout_toRightOf="@+id/tvTeamDownScore1"
                    android:background="@color/red"
                    android:text="0"
                    android:textColor="@color/white"
                    android:textSize="13sp"/>
            </RelativeLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll3"
            style="@style/item_rollball_linearlayout"
            android:layout_marginLeft="1dp"
            android:layout_toRightOf="@id/ll2"
            android:layout_weight="1">

            <TextView
                android:id="@+id/tvTeamUp_YA"
                style="@style/item_rollball_textview"
                android:text="1.17"
                />

            <TextView
                android:id="@+id/tvTeamMiddle_YA"
                style="@style/item_rollball_textview"
                android:layout_marginTop="1dp"
                android:text="-1.5/2"
                />

            <TextView
                android:id="@+id/tvTeamDown_YA"
                style="@style/item_rollball_textview"
                android:layout_marginTop="1dp"
                android:text="1.09"
                />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll4"
            style="@style/item_rollball_linearlayout"
            android:layout_marginLeft="1dp"

            android:layout_toRightOf="@id/ll3"
            android:layout_weight="1">

            <TextView
                android:id="@+id/tvTeamUp_DA"
                style="@style/item_rollball_textview"
                android:text="0.99"
                />

            <TextView
                android:id="@+id/tvTeamMiddle_DA"
                style="@style/item_rollball_textview"
                android:layout_marginTop="1dp"
                android:text="2/2.5"
                />

            <TextView
                android:id="@+id/tvTeamDown_DA"
                style="@style/item_rollball_textview"
                android:layout_marginTop="1dp"
                android:text="1.05"
                />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll5"
            style="@style/item_rollball_linearlayout"
            android:layout_marginLeft="1dp"
            android:layout_toRightOf="@id/ll4"
            android:layout_weight="1">

            <TextView
                android:id="@+id/tvTeamUp_EU"
                style="@style/item_rollball_textview"
                android:text="1.12"
                />

            <TextView
                android:id="@+id/tvTeamMiddle_EU"
                style="@style/item_rollball_textview"
                android:layout_marginTop="1dp"
                android:text="3.27"
                />

            <TextView
                android:id="@+id/tvTeamDown_EU"
                style="@style/item_rollball_textview"
                android:layout_marginTop="1dp"
                android:text="1.25"
                />

        </LinearLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>
