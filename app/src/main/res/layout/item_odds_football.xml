<?xml version="1.0" encoding="utf-8"?>
<android.support.percent.PercentFrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                            xmlns:app="http://schemas.android.com/apk/res-auto"
                                            xmlns:tools="http://schemas.android.com/tools"
                                            android:layout_width="match_parent"
                                            android:layout_height="64dp">

    <TextView
        android:id="@+id/company"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:drawableLeft="@mipmap/basket_odds_more"
        android:drawablePadding="5dp"
        android:drawableStart="@mipmap/basket_odds_more"
        android:gravity="center_vertical"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:singleLine="true"
        android:textColor="@color/content_txt_black"
        android:textSize="@dimen/text_size_13"
        app:layout_widthPercent="42%"
        tools:text="公司名"/>

    <android.support.percent.PercentFrameLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_gravity="end"
        android:baselineAligned="false"
        android:paddingBottom="4dp"
        android:paddingTop="4dp"
        app:layout_widthPercent="58%">

        <!--客胜-->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical"
            app:layout_widthPercent="33.33%">

            <TextView
                android:id="@+id/plate_guestOdds_txt"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:textColor="@color/content_txt_black"
                android:textSize="@dimen/text_size_13"
                tools:text="3.0"/>

            <TextView
                android:id="@+id/plate_guestOdds_txt2"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:textColor="@color/content_txt_black"
                android:textSize="@dimen/text_size_13"
                tools:text="2.0"/>
        </LinearLayout>
        <!--盘口-->
        <LinearLayout
            android:id="@+id/item_basket_odds_layout_handicap"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:gravity="center"
            android:orientation="vertical"
            app:layout_widthPercent="33.33%">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1">

                <TextView
                    android:id="@+id/plate_dish_txt"
                    android:layout_width="48dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:textColor="@color/content_txt_black"
                    android:textSize="@dimen/text_size_13"
                    tools:text="*2/2.5"/>

            </FrameLayout>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1">

                <TextView
                    android:id="@+id/plate_dish_txt2"
                    android:layout_width="48dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:textColor="@color/content_txt_black"
                    android:textSize="@dimen/text_size_13"
                    tools:text="*2/2.5"/>

            </FrameLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="end"
            android:gravity="center"
            android:orientation="vertical"
            app:layout_widthPercent="33.33%">

            <TextView
                android:id="@+id/plate_homeOdds_txt"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:textColor="@color/content_txt_black"
                android:textSize="@dimen/text_size_13"
                tools:text="3.3"/>

            <TextView
                android:id="@+id/plate_homeOdds_txt2"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:textColor="@color/content_txt_black"
                android:textSize="@dimen/text_size_13"
                tools:text="4.4"/>
        </LinearLayout>

    </android.support.percent.PercentFrameLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_gravity="bottom"
        android:background="@color/line_football_footer"/>

</android.support.percent.PercentFrameLayout>