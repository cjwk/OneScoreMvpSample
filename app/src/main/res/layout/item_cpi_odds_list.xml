<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/y90"
    android:orientation="horizontal"
    android:paddingBottom="@dimen/y5"
    android:paddingTop="@dimen/y5">

    <TextView
        android:id="@+id/cpi_item_list_company_txt"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center|left"
        android:paddingLeft="@dimen/y15"
        android:text="浩博"
        android:textSize="13sp" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_marginRight="@dimen/y10"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/cpi_item_list_home_txt"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center|right"
            android:text="1.46"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/cpi_item_list_home2_txt"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center|right"
            android:text="1.23"
            android:textSize="13sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_marginRight="@dimen/y10"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/cpi_item_list_odds_txt"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center|right"
            android:text="1.00"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/cpi_item_list_odds2_txt"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center|right"
            android:text="1.69"
            android:textSize="13sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_marginRight="@dimen/y10"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/cpi_item_list_guest_txt"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center|right"
            android:text="1.56"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/cpi_item_list_guest2_txt"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center|right"
            android:text="1.20"
            android:textSize="13sp" />
    </LinearLayout>


</LinearLayout>