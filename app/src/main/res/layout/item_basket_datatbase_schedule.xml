<?xml version="1.0" encoding="utf-8"?>
<android.support.percent.PercentRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                               xmlns:app="http://schemas.android.com/apk/res-auto"
                                               xmlns:tools="http://schemas.android.com/tools"
                                               android:layout_width="match_parent"
                                               android:layout_height="wrap_content"
                                               android:background="@color/white">

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/whitesmoke"/>

    <ImageView
        android:id="@+id/home_logo"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_centerVertical="true"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="15dp"
        android:layout_marginStart="15dp"
        android:layout_marginTop="10dp"/>

    <ImageView
        android:id="@+id/guest_logo"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginBottom="10dp"
        android:layout_marginEnd="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="10dp"/>

    <TextView
        android:id="@+id/middle_line"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:text="@string/label_line"
        android:textColor="@color/content_txt_black"
        android:textSize="@dimen/text_size_13"/>

    <TextView
        android:id="@+id/home_score"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@id/middle_line"
        android:layout_toStartOf="@id/middle_line"
        android:textColor="@color/content_txt_black"
        android:textSize="@dimen/text_size_13"
        tools:text="137"/>

    <TextView
        android:id="@+id/guest_score"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toEndOf="@id/middle_line"
        android:layout_toRightOf="@id/middle_line"
        android:textColor="@color/content_txt_black"
        android:textSize="@dimen/text_size_13"
        tools:text="137"/>

    <TextView
        android:id="@+id/home_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginEnd="40dp"
        android:layout_marginRight="40dp"
        android:layout_toLeftOf="@id/middle_line"
        android:layout_toStartOf="@id/middle_line"
        android:gravity="end"
        android:textColor="@color/content_txt_black"
        android:textSize="@dimen/text_size_13"
        app:layout_widthPercent="25%"
        tools:text="骑士"/>

    <TextView
        android:id="@+id/guest_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="40dp"
        android:layout_marginStart="40dp"
        android:layout_toEndOf="@id/middle_line"
        android:layout_toRightOf="@id/middle_line"
        android:textColor="@color/content_txt_black"
        android:textSize="@dimen/text_size_13"
        app:layout_widthPercent="25%"
        tools:text="勇士"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_alignParentBottom="true"
        android:background="@color/whitesmoke"/>

</android.support.percent.PercentRelativeLayout>