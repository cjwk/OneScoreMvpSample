<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/basket_liaoqiu_root"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.v4.widget.SwipeRefreshLayout
            android:id="@+id/comment_swiperefreshlayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >

            <com.hhly.mlottery.view.PullUpRefreshListView
                android:id="@+id/scroll"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:divider="@null"
                android:dividerHeight="0dp"
                />
        </android.support.v4.widget.SwipeRefreshLayout>

        <TextView
            android:id="@+id/nodata"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:text="@string/comment_contentnull"
            android:visibility="gone"/>

        <LinearLayout
            android:id="@+id/comment_inputcontainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:orientation="vertical"
            >

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="#dddddd"/>

            <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#f5f5f5"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:padding="10dp"

                >

                <TextView
                    android:id="@+id/et_comment"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    android:background="@drawable/selector_counselcomment_edit"
                    android:gravity="center_vertical"
                    android:hint="@string/hint_content"
                    android:maxLength="100"
                    android:paddingLeft="10dp"
                    android:textColor="#333333"
                    android:textColorHint="#999999"
                    android:textSize="13sp"
                    />

                <TextView
                    android:id="@+id/tv_commentcount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:drawableLeft="@mipmap/icon_commentcount"
                    android:drawablePadding="5dp"
                    android:gravity="center"
                    android:textColor="#F55E4D"
                    android:textSize="13sp"
                    android:visibility="gone"
                    />
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>
</FrameLayout>
