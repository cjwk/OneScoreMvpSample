<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="10dp">

    <!-- 双色球 -->

    <!--中奖注数-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                style="@style/lottery_info_title"
                android:background="@drawable/number_tab_solid_all2"
                android:text="奖等" />

            <TextView
                style="@style/lottery_info_content_left"
                android:text="一等奖" />

            <TextView
                style="@style/lottery_info_content_left"
                android:text="其中：一等奖复式投注" />

            <TextView
                style="@style/lottery_info_content_left"
                android:text="二等奖" />

            <TextView
                style="@style/lottery_info_content_left"
                android:text="三等奖" />

            <TextView
                style="@style/lottery_info_content_left"
                android:text="四等奖" />

            <TextView
                style="@style/lottery_info_content_left"
                android:text="五等奖" />

            <TextView
                style="@style/lottery_info_content_left"
                android:text="六等奖" />

            <TextView
                style="@style/lottery_info_content_left"
                android:text="其中：六等奖复式投注" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.8"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                style="@style/lottery_info_title"
                android:text="中奖注数（注）" />

            <TextView
                android:id="@+id/lottery_ssq_count1"
                style="@style/lottery_info_content_right"
                android:text="3" />

            <TextView
                android:id="@+id/lottery_ssq_count1_1"
                style="@style/lottery_info_content_right"
                android:text="2" />

            <TextView
                android:id="@+id/lottery_ssq_count2"
                style="@style/lottery_info_content_right"
                android:text="127" />

            <TextView
                android:id="@+id/lottery_ssq_count3"
                style="@style/lottery_info_content_right"
                android:text="1619" />

            <TextView
                android:id="@+id/lottery_ssq_count4"
                style="@style/lottery_info_content_right"
                android:text="63501" />

            <TextView
                android:id="@+id/lottery_ssq_count5"
                style="@style/lottery_info_content_right"
                android:text="1329019" />

            <TextView
                android:id="@+id/lottery_ssq_count6"
                style="@style/lottery_info_content_right"
                android:text="8932453" />

            <TextView
                android:id="@+id/lottery_ssq_count6_1"
                style="@style/lottery_info_content_right"
                android:text="3485024" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                style="@style/lottery_info_title"
                android:text="单注中奖金额（元）" />

            <TextView
                android:id="@+id/lottery_ssq_bonus1"
                style="@style/lottery_info_content_right"
                android:text="10,000,000" />

            <TextView
                android:id="@+id/lottery_ssq_bonus1_1"
                style="@style/lottery_info_content_right"
                android:text="15000000(含派奖5000000)" />

            <TextView
                android:id="@+id/lottery_ssq_bonus2"
                style="@style/lottery_info_content_right"
                android:text="219,909" />

            <TextView
                android:id="@+id/lottery_ssq_bonus3"
                style="@style/lottery_info_content_right"
                android:text="3,000" />

            <TextView
                android:id="@+id/lottery_ssq_bonus4"
                style="@style/lottery_info_content_right"
                android:text="200" />

            <TextView
                android:id="@+id/lottery_ssq_bonus5"
                style="@style/lottery_info_content_right"
                android:text="10" />

            <TextView
                android:id="@+id/lottery_ssq_bonus6"
                style="@style/lottery_info_content_right"
                android:text="5" />

            <TextView
                android:id="@+id/lottery_ssq_bonus6_1"
                style="@style/lottery_info_content_right"
                android:text="10(含派奖5)" />
        </LinearLayout>
    </LinearLayout>

    <!--本期销售额-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="本期销售额：" />

        <TextView
            android:id="@+id/lottery_ssq_sales_volume"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="￥354,586,076元"
            android:textColor="@color/number_red" />

    </LinearLayout>

    <!--奖金滚池-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="奖金滚存：" />

        <TextView
            android:id="@+id/lottery_ssq_bonus_sum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="￥354,586,076元"
            android:textColor="@color/number_red" />

    </LinearLayout>

    <!--详情统计-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingTop="20dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/number_tab_solid_all"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="综合"
                    android:textColor="@color/title"
                    android:textSize="@dimen/number_title" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    style="@style/number_text_style4"
                    android:text="和值"
                    android:textColor="@color/title" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/lottery_ssq_hz"
                    style="@style/number_text_style3" />

            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/number_tab_solid_all_l_b_r"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="红球"
                    android:textColor="@color/title"
                    android:textSize="@dimen/number_title" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    style="@style/number_text_style5"
                    android:text="大小"
                    android:textColor="@color/title" />

                <TextView
                    style="@style/number_text_style5"
                    android:text="奇偶"
                    android:textColor="@color/title" />

                <TextView
                    style="@style/number_text_style5"
                    android:text="区间"
                    android:textColor="@color/title" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:background="@drawable/number_tab_solid_all_r_b"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/lottery_ssq_dx1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="2dp"
                        android:text="--"
                        android:textSize="@dimen/number_title" />

                    <TextView
                        android:id="@+id/lottery_ssq_dx2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="2dp"
                        android:text="--"
                        android:textSize="@dimen/number_title" />

                    <TextView
                        android:id="@+id/lottery_ssq_dx3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="2dp"
                        android:text="--"
                        android:textSize="@dimen/number_title" />

                    <TextView
                        android:id="@+id/lottery_ssq_dx4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="2dp"
                        android:text="--"
                        android:textSize="@dimen/number_title" />

                    <TextView
                        android:id="@+id/lottery_ssq_dx5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="2dp"
                        android:text="--"
                        android:textSize="@dimen/number_title" />

                    <TextView
                        android:id="@+id/lottery_ssq_dx6"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="2dp"
                        android:text="--"
                        android:textSize="@dimen/number_title" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:background="@drawable/number_tab_solid_all_r_b"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/lottery_ssq_jo1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="2dp"
                        android:text="--"
                        android:textSize="@dimen/number_title" />

                    <TextView
                        android:id="@+id/lottery_ssq_jo2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="2dp"
                        android:text="--"
                        android:textSize="@dimen/number_title" />

                    <TextView
                        android:id="@+id/lottery_ssq_jo3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="2dp"
                        android:text="--"
                        android:textSize="@dimen/number_title" />

                    <TextView
                        android:id="@+id/lottery_ssq_jo4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="2dp"
                        android:text="--"
                        android:textSize="@dimen/number_title" />

                    <TextView
                        android:id="@+id/lottery_ssq_jo5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="2dp"
                        android:text="--"
                        android:textSize="@dimen/number_title" />

                    <TextView
                        android:id="@+id/lottery_ssq_jo6"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="2dp"
                        android:text="--"
                        android:textSize="@dimen/number_title" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:background="@drawable/number_tab_solid_all_r_b"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/lottery_ssq_qj1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="2dp"
                        android:text="--"
                        android:textSize="@dimen/number_title" />

                    <TextView
                        android:id="@+id/lottery_ssq_qj2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="2dp"
                        android:text="--"
                        android:textSize="@dimen/number_title" />

                    <TextView
                        android:id="@+id/lottery_ssq_qj3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="2dp"
                        android:text="--"
                        android:textSize="@dimen/number_title" />

                    <TextView
                        android:id="@+id/lottery_ssq_qj4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="2dp"
                        android:text="--"
                        android:textSize="@dimen/number_title" />

                    <TextView
                        android:id="@+id/lottery_ssq_qj5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="2dp"
                        android:text="--"
                        android:textSize="@dimen/number_title" />

                    <TextView
                        android:id="@+id/lottery_ssq_qj6"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="2dp"
                        android:text="--"
                        android:textSize="@dimen/number_title" />
                </LinearLayout>

            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>