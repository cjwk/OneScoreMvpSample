<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/betting_set_item"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingLeft="6dp"
    android:paddingRight="6dp">

    <CheckBox
        android:id="@+id/betting_set_checkbox"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="4dp"
        android:layout_marginTop="4dp"
        android:background="@drawable/filtrate_match_checkbox_defualt_bg"
        android:button="@null"
        android:ellipsize="end"
        android:gravity="center"
        android:lines="1"
        android:paddingBottom="6dp"
        android:paddingTop="6dp"
        android:textColor="@drawable/filtrate_match_defualt_textcolor"
        android:textSize="@dimen/item_filtrate_match_text"
        android:text="半场大小球"/>
</LinearLayout>