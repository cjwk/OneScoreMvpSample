            <TextView
                android:id="@+id/lottery_dlt_count1"
                style="@style/lottery_info_content_right"
                android:layout_height="20dp"
                android:text="3" />

            <TextView
                android:id="@+id/lottery_dlt_add_count1"
                style="@style/lottery_info_content_right"
                android:layout_height="20dp"
                android:text="2" />

            <TextView
                android:id="@+id/lottery_dlt_count2"
                style="@style/lottery_info_content_right"
                android:layout_height="20dp"
                android:text="127" />

            <TextView
                android:id="@+id/lottery_dlt_add_count2"
                style="@style/lottery_info_content_right"
                android:layout_height="20dp"
                android:text="1619" />

            <TextView
                android:id="@+id/lottery_dlt_count3"
                style="@style/lottery_info_content_right"
                android:layout_height="20dp"
                android:text="63501" />

            <TextView
                android:id="@+id/lottery_dlt_add_count3"
                style="@style/lottery_info_content_right"
                android:layout_height="20dp"
                android:text="1329019" />

            <TextView
                android:id="@+id/lottery_dlt_count4"
