                android:text="63501" />

            <TextView
                android:id="@+id/lottery_dlt_count5"
                style="@style/lottery_info_content_right"
                android:layout_height="20dp"
                android:text="63501" />

            <TextView
                android:id="@+id/lottery_dlt_add_count5"
                style="@style/lottery_info_content_right"
                android:layout_height="20dp"
                android:text="63501" />

            <TextView
                android:id="@+id/lottery_dlt_count6"
                style="@style/lottery_info_content_right"
                android:layout_height="20dp"
                android:text="1329019" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                style="@style/lottery_info_title"
                android:text="每注奖金(元)"
                android:id="@+id/textView" />

            <TextView
                android:id="@+id/lottery_dlt_bonus1"
                style="@style/lottery_info_content_right"
                android:layout_height="20dp"
                android:text="10,000,000" />

            <TextView
                android:id="@+id/lottery_dlt_add_bonus1"
                style="@style/lottery_info_content_right"
                android:layout_height="20dp"
                android:text="15000000(含派奖5000000)" />

            <TextView
                android:id="@+id/lottery_dlt_bonus2"
                style="@style/lottery_info_content_right"
                android:layout_height="20dp"
                android:text="219,909" />

            <TextView
                android:id="@+id/lottery_dlt_add_bonus2"
                style="@style/lottery_info_content_right"
                android:layout_height="20dp"
                android:text="3,000" />

            <TextView
                android:id="@+id/lottery_dlt_bonus3"
                style="@style/lottery_info_content_right"
                android:layout_height="20dp"
                android:text="200" />

            <TextView
                android:id="@+id/lottery_dlt_add_bonus3"
                style="@style/lottery_info_content_right"
                android:layout_height="20dp"
                android:text="200" />

            <TextView
                android:id="@+id/lottery_dlt_bonus4"
                style="@style/lottery_info_content_right"
                android:layout_height="20dp"
                android:text="200" />

            <TextView
                android:id="@+id/lottery_dlt_add_bonus4"
                style="@style/lottery_info_content_right"
                android:layout_height="20dp"
                android:text="200" />

            <TextView
                android:id="@+id/lottery_dlt_bonus5"
                style="@style/lottery_info_content_right"
                android:layout_height="20dp"
                android:text="200" />

            <TextView
                android:id="@+id/lottery_dlt_add_bonus5"
                style="@style/lottery_info_content_right"
                android:layout_height="20dp"
                android:text="200" />

            <TextView
                android:id="@+id/lottery_dlt_bonus6"
                style="@style/lottery_info_content_right"
                android:layout_height="20dp"
                android:text="10" />
        </LinearLayout>
    </LinearLayout>

    <!--本期销售额-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="本期销售额：" />

        <TextView
            android:id="@+id/lottery_dlt_sales_volume"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="￥354,586,076元"
            android:textColor="@color/number_red" />

    </LinearLayout>

    <!--奖金滚池-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="奖金滚存：" />

        <TextView
            android:id="@+id/lottery_dlt_bonus_sum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="￥354,586,076元"
            android:textColor="@color/number_red" />

    </LinearLayout>

    <!--详情统计-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingTop="20dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/number_tab_solid_all"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="综合"
                    android:textColor="@color/title"
                    android:textSize="@dimen/number_title" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    style="@style/number_text_style4"
                    android:text="和值"
                    android:textColor="@color/title" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/lottery_dlt_hz"
                    style="@style/number_text_style3" />

            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/number_tab_solid_all_l_b_r"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="红球"
                    android:textColor="@color/title"
                    android:textSize="@dimen/number_title" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    style="@style/number_text_style5"
                    android:text="大小"
                    android:textColor="@color/title" />

                <TextView
                    style="@style/number_text_style5"
                    android:text="奇偶"
                    android:textColor="@color/title" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:background="@drawable/number_tab_solid_all_r_b"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/lottery_dlt_dx1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="2dp"
                        android:text="--"
                        android:textSize="@dimen/number_title" />

                    <TextView
                        android:id="@+id/lottery_dlt_dx2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="2dp"
                        android:text="--"
                        android:textSize="@dimen/number_title" />

                    <TextView
                        android:id="@+id/lottery_dlt_dx3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="2dp"
                        android:text="--"
                        android:textSize="@dimen/number_title" />

                    <TextView
                        android:id="@+id/lottery_dlt_dx4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="2dp"
                        android:text="--"
                        android:textSize="@dimen/number_title" />

                    <TextView
                        android:id="@+id/lottery_dlt_dx5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="2dp"
                        android:text="--"
                        android:textSize="@dimen/number_title" />


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:background="@drawable/number_tab_solid_all_r_b"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/lottery_dlt_jo1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="2dp"
                        android:text="--"
                        android:textSize="@dimen/number_title" />

                    <TextView
                        android:id="@+id/lottery_dlt_jo2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="2dp"
                        android:text="--"
                        android:textSize="@dimen/number_title" />

                    <TextView
                        android:id="@+id/lottery_dlt_jo3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="2dp"
                        android:text="--"
                        android:textSize="@dimen/number_title" />

                    <TextView
                        android:id="@+id/lottery_dlt_jo4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="2dp"
                        android:text="--"
                        android:textSize="@dimen/number_title" />

                    <TextView
                        android:id="@+id/lottery_dlt_jo5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="2dp"
                        android:text="--"
                        android:textSize="@dimen/number_title" />

                </LinearLayout>

            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>