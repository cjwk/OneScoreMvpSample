                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:paddingBottom="5dp"
                android:text="[——]"
                android:textColor="@color/black_details_ball_textcolor"
                android:textSize="@dimen/text_size_10"/>
        </LinearLayout>

