<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/alertdialog"
    android:layout_width="337dp"
    android:layout_height="240dp"
    android:orientation="vertical"
    >

    <TextView
        android:id="@+id/screen_titleView"
        android:layout_width="337dp"
        android:layout_height="38dip"
        android:background="@drawable/basket_screen_title"
        android:gravity="center"
        android:text="筛选"
        android:textColor="@color/white"
        android:textSize="16sp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="场地"
        android:background="@color/black_grounding"
        android:paddingTop="15dp"
        android:paddingLeft="30dp"
        android:paddingBottom="10dp"
        android:textColor="@color/black_details_textcolor"
        />

    <RadioGroup
        android:id="@+id/gendergroup1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/black_grounding"
        android:paddingLeft="30dp"
        >
        <RadioButton
            android:id="@+id/basket_analyze_allsite"
            android:layout_width="96dp"
            android:layout_height="29dp"
            android:text="全部"
            android:button="@null"
            android:gravity="center"
            android:checked="true"
            android:textColor="@color/basket_screen_text_color"
            android:background="@drawable/basket_screen_left_selector"
            />
        <RadioButton
            android:id="@+id/basket_analyze_samesite"
            android:layout_width="96dp"
            android:layout_height="29dp"
            android:text="相同主客场"
            android:button="@null"
            android:gravity="center"
            android:textColor="@color/basket_screen_text_color"
            android:background="@drawable/basket_screen_right_selector"/>
    </RadioGroup>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="场数"
        android:background="@color/black_grounding"
        android:paddingTop="15dp"
        android:paddingLeft="30dp"
        android:paddingBottom="10dp"
        android:textColor="@color/black_details_textcolor"
        />

    <RadioGroup
        android:id="@+id/gendergroup2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/black_grounding"
        android:paddingLeft="30dp"
        android:paddingBottom="20dp"
        >
        <RadioButton
            android:id="@+id/basket_analyze_num_six"
            android:layout_width="96dp"
            android:layout_height="29dp"
            android:text="6场"
            android:button="@null"
            android:gravity="center"
            android:textColor="@color/basket_screen_text_color"
            android:checked="true"
            android:background="@drawable/basket_screen_left_selector"
            />
        <RadioButton
            android:id="@+id/basket_analyze_num_ten"
            android:layout_width="96dp"
            android:layout_height="29dp"
            android:text="10场"
            android:button="@null"
            android:gravity="center"
            android:textColor="@color/basket_screen_text_color"
            android:background="@drawable/basket_screen_middle_selector"
            
            />
        <RadioButton
            android:id="@+id/basket_analyze_num_fifteen"
            android:layout_width="96dp"
            android:layout_height="29dp"
            android:text="15场"
            android:button="@null"
            android:gravity="center"
            android:textColor="@color/basket_screen_text_color"
            android:background="@drawable/basket_screen_right_selector"/>
    </RadioGroup>

    <View
        android:layout_width="1px"
        android:layout_height="1px"
        android:background="@color/basket_score_gray"
        />

