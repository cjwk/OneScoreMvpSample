<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/basket_details_header_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/basket_details_back"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:layout_centerInParent="true"
            android:paddingLeft="7.5dp"
            android:paddingRight="6dp"
            android:src="@mipmap/basketball_back" />


        <ImageView
            android:id="@+id/barrage_switch"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_toLeftOf="@+id/basket_details_collect"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:src="@mipmap/danmu_open"
             />
        <ImageView
            android:id="@+id/basket_details_collect"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:paddingLeft="7.5dp"
            android:paddingRight="21dp"
            android:src="@mipmap/basketball_collect" />

        <RelativeLayout
            android:id="@+id/ll_basket_title_score"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:visibility="visible">

            <TextView
                android:id="@+id/title_vs"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:gravity="center"
                android:padding="2.5dp"
                android:text="VS"
                android:visibility="gone"
                android:textColor="#ffffff"
                android:textSize="@dimen/text_size_16" />

            <TextView
                android:id="@+id/title_guest_score"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_marginRight="2.5dp"
                android:layout_toLeftOf="@id/title_vs"
                android:singleLine="true"
                android:text=""
                android:visibility="gone"
                android:textColor="#ffffff"
                android:textSize="@dimen/text_size_16" />

            <TextView
                android:id="@+id/title_home_score"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_marginLeft="2.5dp"
                android:layout_toRightOf="@id/title_vs"
                android:singleLine="true"
                android:text=""
                android:visibility="gone"
                android:textColor="#ffffff"
                android:textSize="@dimen/text_size_16" />
        </RelativeLayout>
    </RelativeLayout>

</LinearLayout>