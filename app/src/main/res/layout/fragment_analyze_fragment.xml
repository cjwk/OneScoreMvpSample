                        android:textSize="@dimen/text_size_10"
                        android:layout_alignParentTop="true"
                        android:layout_toRightOf="@id/guest_goal"
                        android:layout_toEndOf="@id/guest_goal" />
                </RelativeLayout>
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/line_football_footer"/>
            <!--第二行-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                >
                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:padding="10dp"
                    android:gravity="center_horizontal"
                    >
                    <TextView
                        android:id="@+id/home_lose"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="1.24"
                        android:textColor="@color/odds_details"
                        android:textSize="@dimen/text_size_25"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="场均失球"
                        android:textSize="@dimen/text_size_10"
                        android:textColor="@color/content_txt_light_grad"
                        android:layout_below="@id/home_lose"
                        android:layout_alignRight="@id/home_lose"
                        android:layout_alignEnd="@id/home_lose" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="球"
                        android:textColor="@color/odds_details"
                        android:textSize="@dimen/text_size_10"
                        android:layout_alignParentTop="true"
                        android:layout_toRightOf="@id/home_lose"
                        android:layout_toEndOf="@id/home_lose" />
                </RelativeLayout>

                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="@color/line_football_footer"
                    />

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:padding="10dp"
                    android:gravity="center_horizontal"
                    >
                    <TextView
                        android:id="@+id/guest_lose"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="1.24"
                        android:textColor="@color/more_record"
                        android:textSize="@dimen/text_size_25"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="场均失球"
                        android:textSize="@dimen/text_size_10"
                        android:textColor="@color/content_txt_light_grad"
                        android:layout_below="@id/guest_lose"
                        android:layout_alignRight="@id/guest_lose"
                        android:layout_alignEnd="@id/guest_lose" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="球"
                        android:textColor="@color/more_record"
                        android:textSize="@dimen/text_size_10"
                        android:layout_alignParentTop="true"
                        android:layout_toRightOf="@id/guest_lose"
                        android:layout_toEndOf="@id/guest_lose" />
                </RelativeLayout>
            </LinearLayout>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="5dp"
            android:background="@color/home_item_bg"/>
        <!--球员信息-->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:textSize="@dimen/text_size_13"
                android:text="球员信息"
                android:textColor="@color/analyze_title"
                />

        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:textColor="@color/line_football_footer"
            />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="15dp"
            android:paddingBottom="15dp"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:gravity="center_vertical"
            >
            <TextView
                android:id="@+id/lineup_home_team"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="巴萨"
                android:textColor="@color/odds_details"
                android:textSize="@dimen/text_size_15"
                />
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/hometeam_uniform"
                android:layout_toRightOf="@id/lineup_home_team"
                android:layout_marginLeft="5dp"
                android:paddingTop="2dp"
                />
            <TextView
                android:id="@+id/lineup_guest_team"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="皇马"
                android:textColor="@color/more_record"
                android:textSize="@dimen/text_size_15"
                android:layout_alignParentRight="true"
                />
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/guestteam_uniform"
                android:layout_toLeftOf="@id/lineup_guest_team"
                android:layout_marginRight="5dp"
                android:paddingTop="2dp"
                />
        </RelativeLayout>
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="200dp"
            >
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@mipmap/player_background"
                android:layout_gravity="center_horizontal|bottom" />

        <!--暂无首发-->
        <FrameLayout
            android:id="@+id/fl_firsPlayers_not"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="gone">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/first_players_not_hint" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingTop="@dimen/x10"
                    android:text="@string/firsPlayers_not"
                    android:textColor="@color/content_txt_light_grad"
                    android:textSize="18sp" />
            </LinearLayout>
        </FrameLayout>
            <!--主客队信息-->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            <!--主、客队名单-->
            <LinearLayout
                android:id="@+id/fl_firsPlayers_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <!--主队名单-->
                <LinearLayout
                    android:id="@+id/ll_rosters_homeTeam"
                    android:layout_width="0dip"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:paddingLeft="@dimen/x50"
                    android:paddingTop="@dimen/y40">

                </LinearLayout>
                <!--客队名单-->
                <LinearLayout
                    android:id="@+id/ll_rosters_visitingTeam"
                    android:layout_width="0dip"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="right"
                    android:orientation="vertical"
                    android:paddingRight="@dimen/x50"
                    android:paddingTop="@dimen/y40">

                </LinearLayout>
            </LinearLayout>
            </RelativeLayout>
        </FrameLayout>

    </LinearLayout>

</android.support.v4.widget.NestedScrollView>
