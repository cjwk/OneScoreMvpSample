                    android:layout_toRightOf="@id/home_goal"
                    android:layout_toEndOf="@id/home_goal" />
            </RelativeLayout>

                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="@color/line_football_footer"
                    />

