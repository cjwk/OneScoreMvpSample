                        android:layout_height="wrap_content"
                        android:text="场均进球"
                        android:textSize="@dimen/text_size_10"
                        android:textColor="@color/content_txt_light_grad"
                        android:layout_below="@id/guest_goal"
                        android:layout_alignRight="@+id/guest_goal"
                        android:layout_alignEnd="@id/guest_goal" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="球"
