<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
android:id="@+id/basket_odds_details_fragment_root"
android:orientation="vertical"
android:layout_width="match_parent"
android:layout_height="match_parent">

    <!--<View-->
        <!--android:id="@+id/list_background"-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:background="@android:color/white" />-->

<android.support.v4.widget.SwipeRefreshLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <com.hhly.mlottery.view.ObservableScrollView
        android:id="@+id/scroll"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:overScrollMode="never"
        android:scrollbars="none">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/flexible_space_image_height"
                android:background="@android:color/transparent" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/black_grounding"
                >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"

                    >
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/y82"
                            android:orientation="horizontal"
                            >

                            <TextView
                                android:layout_width="75dp"
                                android:layout_height="match_parent"
                                android:background="@color/black_title"
                                android:gravity="center"
                                />

                            <TextView
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:layout_height="match_parent"
                                android:text="@string/basket_analyze_update"
                                android:textColor="@color/black_details_ball_textcolor"
                                android:gravity="center"
                                android:background="@color/black_grounding"/>

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_weight="2"
                                android:layout_height="match_parent"
                                android:background="@color/black_grounding"
                                android:gravity="center">
                                <TextView
                                    android:layout_width="0dp"
                                    android:layout_weight="1"
                                    android:layout_height="wrap_content"
                                    android:text="@string/basket_analyze_guest_win"
                                    android:textColor="@color/black_details_ball_textcolor"
                                    android:gravity="center"/>
                                <TextView
                                    android:layout_width="0dp"
                                    android:layout_weight="1"
                                    android:layout_height="wrap_content"
                                    android:text="@string/basket_analyze_dish"
                                    android:textColor="@color/black_details_ball_textcolor"
                                    android:gravity="center"
                                    />
                                <TextView
                                    android:layout_width="0dp"
                                    android:layout_weight="1"
                                    android:layout_height="wrap_content"
                                    android:text="@string/basket_analyze_home_win"
                                    android:textColor="@color/black_details_ball_textcolor"
                                    android:gravity="center"/>
                            </LinearLayout>
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/basket_list_ll"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="horizontal"
                            >
                            <com.hhly.mlottery.widget.NestedListView
                                android:layout_width="75dp"
                                android:layout_height="match_parent"
                                android:id="@+id/basket_odds_company"
                                android:divider="#00000000"
                                android:dividerHeight="0dip"
                                android:listSelector="@android:color/transparent"
                                android:scrollbars="none"
                                >
                            </com.hhly.mlottery.widget.NestedListView>
                            <com.hhly.mlottery.widget.NestedListView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:id="@+id/basket_odds_company_details"
                                android:divider="#00000000"
                                android:dividerHeight="0dip"
                                android:listSelector="@android:color/transparent"
                                android:textColor="@color/black_details_ball_textcolor"
                                android:scrollbars="none"
                                >
                            </com.hhly.mlottery.widget.NestedListView>
                        </LinearLayout>
                </LinearLayout>

                <LinearLayout
                        android:id="@+id/basketball_details_error"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/y750"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:background="@color/black_grounding"
                        android:visibility="gone"
                        >

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@mipmap/refresh" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="6dp"
                            android:text="@string/exp_net_status_txt"
                            android:textColor="@color/version"
                            android:textSize="14sp" />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="0dp"
                            android:orientation="horizontal" >
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginRight="5dip"
                                android:text="@string/exp__check_txt"
                                android:textColor="@color/version"
                                android:textSize="14sp" />

                            <TextView
                                android:id="@+id/basketball_details_error_btn"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/exp_refresh_txt"
                                android:textColor="@color/basket_score"
                                android:textSize="14sp" />
                        </LinearLayout>
                    </LinearLayout>
            </RelativeLayout>
        </LinearLayout>
    </com.hhly.mlottery.view.ObservableScrollView>
</android.support.v4.widget.SwipeRefreshLayout>
</FrameLayout>