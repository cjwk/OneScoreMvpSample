<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:orientation="horizontal"

    android:weightSum="7">

    <TextView
        android:id="@+id/tv_league_rank"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_weight="1"
        android:gravity="center"
        android:text="排名"
        android:textColor="@color/team_name_color"
        android:textSize="@dimen/text_size_13" />

    <LinearLayout
        android:id="@+id/ll_league_bg"
        android:layout_width="0dp"
        android:layout_height="45dp"
        android:layout_gravity="center"
        android:layout_weight="2"
        android:background="@color/red"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_league_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="英锦赛"
            android:textColor="@color/white"

            android:textSize="@dimen/text_size_10" />

        <TextView
            android:id="@+id/tv_league_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="(2016-2017)"
            android:textColor="@color/white"

            android:textSize="@dimen/text_size_10" />

    </LinearLayout>


    <TextView
        android:id="@+id/tv_league_finish"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_weight="1"
        android:gravity="center"
        android:text="已赛"

        android:textColor="@color/team_name_color"

        android:textSize="@dimen/text_size_13" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_league_win_percent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="50%"
            android:textColor="@color/team_name_color"

            android:textSize="@dimen/text_size_15" />

        <TextView
            android:id="@+id/tv_league_win_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="20"
            android:textColor="@color/mdy_999"
            android:textSize="@dimen/text_size_10" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_league_flat_percent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="50%"
            android:textColor="@color/team_name_color"

            android:textSize="@dimen/text_size_15" />

        <TextView
            android:id="@+id/tv_league_flat_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="20"
            android:textColor="@color/mdy_999"

            android:textSize="@dimen/text_size_10" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_league_loss_percent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="50%"
            android:textColor="@color/team_name_color"
            android:textSize="@dimen/text_size_15" />

        <TextView
            android:id="@+id/tv_league_loss_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="20"
            android:textColor="@color/mdy_999"
            android:textSize="@dimen/text_size_10" />
    </LinearLayout>


</LinearLayout>