<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f5f5f5"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/hot_score_txt"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="15dp"
                android:textSize="14sp"
                />

            <com.hhly.mlottery.widget.GrapeGridsView
                android:id="@+id/filtrate_match_gridview_hot"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:columnWidth="0dp"
                android:gravity="center"
                android:horizontalSpacing="0dp"
                android:numColumns="4"
                android:scrollbars="none"
                android:stretchMode="columnWidth"
                android:layout_marginTop="6dp"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/other_score_txt"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="15dp"
                android:textSize="14sp"
                />

            <com.hhly.mlottery.widget.GrapeGridsView
                android:id="@+id/filtrate_match_gridview_other"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:columnWidth="0dp"
                android:gravity="center"
                android:horizontalSpacing="0dp"
                android:numColumns="4"
                android:scrollbars="none"
                android:stretchMode="columnWidth"
                android:verticalSpacing="3dp"
                android:layout_marginTop="6dp"
                />
        </LinearLayout>
    </ScrollView>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/filtrate_match_hide"
                android:textColor="@color/filtrate_match_hide_gray"
                android:textSize="@dimen/text_size_12" />

            <TextView
                android:id="@+id/filtrate_match_hide_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="2dp"
                android:layout_marginRight="2dp"
                android:text="0"
                android:textColor="@color/home_dividing_line_red"
                android:textSize="@dimen/text_size_14" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/filtrate_match_session"
                android:textColor="@color/filtrate_match_hide_gray"
                android:textSize="@dimen/text_size_12" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.3dp"
            android:background="@color/line_football_footer" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:weightSum="4">

            <TextView
                android:id="@+id/filtrate_match_focus_btn"
                style="@style/filtrate_match_select_btn"
                android:layout_width="0dp"
                android:layout_height="29dp"
                android:layout_marginRight="5dp"
                android:layout_weight="1"
                android:text="@string/filtrate_match_focal" />

            <TextView
                android:id="@+id/filtrate_match_hot_btn"
                style="@style/filtrate_match_select_btn"
                android:layout_width="0dp"
                android:layout_height="29dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_weight="1"
                android:text="@string/filtrate_match_hot" />

            <TextView
                android:id="@+id/filtrate_match_all_btn"
                style="@style/filtrate_match_select_btn"
                android:layout_width="0dp"
                android:layout_height="29dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_weight="1"
                android:text="@string/filtrate_match_all" />

            <TextView
                android:id="@+id/filtrate_match_inverse_btn"
                style="@style/filtrate_match_select_btn"
                android:layout_width="0dp"
                android:layout_height="29dp"
                android:layout_marginLeft="5dp"
                android:layout_weight="1"
                android:text="@string/filtrate_match_inverse" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>