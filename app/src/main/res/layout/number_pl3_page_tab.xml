<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="10dp">

    <!-- 排列3 -->

    <!--奖项统计-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                style="@style/lottery_info_title"
                android:background="@drawable/number_tab_solid_all2"
                android:text="奖项" />

            <TextView
                style="@style/lottery_info_content_left"
                android:text="直选" />

            <TextView
                style="@style/lottery_info_content_left"
                android:text="组三" />

            <TextView
                style="@style/lottery_info_content_left"
                android:text="组六" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.8"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                style="@style/lottery_info_title"
                android:text="单注奖金(元)" />

            <TextView
                android:id="@+id/lottery_pl3_bonus1"
                style="@style/lottery_info_content_right"
                android:text="108,888元" />

            <TextView
                android:id="@+id/lottery_pl3_bonus2"
                style="@style/lottery_info_content_right"
                android:text="108,888元" />

            <TextView
                android:id="@+id/lottery_pl3_bonus3"
                style="@style/lottery_info_content_right"
                android:text="108,888元" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                style="@style/lottery_info_title"
                android:text="中奖注数(注)" />

            <TextView
                android:id="@+id/lottery_pl3_count1"
                style="@style/lottery_info_content_right"
                android:text="108注" />

            <TextView
                android:id="@+id/lottery_pl3_count2"
                style="@style/lottery_info_content_right"
                android:text="108注" />

            <TextView
                android:id="@+id/lottery_pl3_count3"
                style="@style/lottery_info_content_right"
                android:text="108注" />

        </LinearLayout>
    </LinearLayout>

    <!--本期销量-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="全国销量：" />

        <TextView
            android:id="@+id/lottery_pl3_sales_volume"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="￥354,586,076元"
            android:textColor="@color/number_red" />

    </LinearLayout>

    <!--帮肋-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="20dp"
        android:orientation="vertical">
        
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/lottery_pl3_help_icon"/>
        
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="10dp"
            android:text="直选：所选号码与开奖号码按位数全部相同"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="组三：开奖号码中有[对子]，且包含任选号中"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="组六：三个开奖号码[均不相同]，且包含任选号中"/>
        
    </LinearLayout>
</LinearLayout>