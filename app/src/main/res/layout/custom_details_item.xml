<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="127dp"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/custom_match_item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp">

            <TextView
                android:id="@+id/backetball_matches_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="--"
                android:textColor="#E11000"
                android:textSize="@dimen/text_size_12" />

            <TextView
                android:id="@+id/backetball_game_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@id/backetball_matches_name"
                android:paddingLeft="10dp"
                android:text="    "
                android:textColor="#666666"
                android:textSize="@dimen/text_size_12" />

            <TextView
                android:id="@+id/backetball_st_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@id/backetball_game_time"
                android:paddingLeft="10dp"
                android:text="--"
                android:textColor="#1CDA4A"
                android:textSize="@dimen/text_size_12" />

            <TextView
                android:id="@+id/backetball_ongoing_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@id/backetball_st_time"
                android:paddingLeft="5dp"
                android:text="          --"
                android:textColor="#1CDA4A"
                android:textSize="@dimen/text_size_12" />

            <TextView
                android:id="@+id/backetball_apos"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="3dp"
                android:layout_toRightOf="@id/backetball_ongoing_time"
                android:text="&apos;"
                android:textColor="#1CDA4A"
                android:textSize="@dimen/text_size_12" />


            <!--<TextView-->
            <!--android:id="@+id/basket_open_score"-->
            <!--android:layout_width="wrap_content"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:layout_toRightOf="@id/backetball_apos"-->
            <!--android:text="open_score"/>-->

            <TextView
                android:id="@+id/backetball_score_differ"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:paddingLeft="3dp"
                android:text="--"
                android:textColor="#666666"
                android:textSize="@dimen/text_size_12" />

            <TextView
                android:id="@+id/backetball_differ"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@id/backetball_score_differ"
                android:paddingLeft="5dp"
                android:text="@string/basket_differ"
                android:textColor="#666666"
                android:textSize="@dimen/text_size_12" />

            <TextView
                android:id="@+id/backetball_score_total"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@id/backetball_differ"
                android:text=" -- "
                android:textColor="#666666"
                android:textSize="@dimen/text_size_12" />

            <TextView
                android:id="@+id/backetball_total"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@id/backetball_score_total"
                android:text="@string/basket_total"
                android:textColor="#666666"
                android:textSize="@dimen/text_size_12" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="7dp">

            <RelativeLayout
                android:id="@+id/rl_iv"
                android:layout_width="105dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/guest_icon"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"
                    android:layout_gravity="center" />

            </RelativeLayout>

            <LinearLayout
                android:id="@+id/ll_gurst"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignEnd="@+id/rl_iv"
                android:layout_alignLeft="@+id/rl_iv"
                android:layout_alignRight="@+id/rl_iv"
                android:layout_alignStart="@+id/rl_iv"
                android:layout_below="@+id/rl_iv"
                android:layout_gravity="center"
                android:orientation="vertical">


                <TextView
                    android:id="@+id/guest_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:paddingTop="3dp"
                    android:singleLine="true"
                    android:text="----------------------------"
                    android:textColor="#333333"
                    android:textSize="@dimen/text_size_12" />

                <TextView
                    android:id="@+id/basket_guest_Ranking"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:paddingBottom="5dp"
                    android:text="[--]"
                    android:textColor="#999999"
                    android:textSize="@dimen/text_size_10" />
            </LinearLayout>

            <RelativeLayout
                android:layout_width="140dp"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/basket_score"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="-3dp"
                    android:paddingLeft="8dp"
                    android:paddingRight="8dp"
                    android:text=":"
                    android:textColor="#0085E1"
                    android:textSize="@dimen/text_size_25" />

                <TextView
                    android:id="@+id/basket_guest_all_score"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toLeftOf="@+id/basket_score"
                    android:text="---"
                    android:textColor="#0085E1"
                    android:textSize="@dimen/text_size_25" />

                <TextView
                    android:id="@+id/basket_home_all_score"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/basket_score"
                    android:text="---"
                    android:textColor="#0085E1"
                    android:textSize="@dimen/text_size_25" />

                <TextView
                    android:id="@+id/basket_half_score"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/basket_score"
                    android:layout_centerHorizontal="true"
                    android:layout_gravity="center_horizontal"
                    android:text="(---:---)"
                    android:textColor="#0085E1"
                    android:textSize="@dimen/text_size_12" />

                <LinearLayout
                    android:id="@+id/basket_details_odds"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/basket_half_score"
                    android:layout_centerHorizontal="true"
                    android:layout_gravity="center_horizontal"
                    android:orientation="horizontal"
                    android:paddingBottom="3dp">

                    <TextView
                        android:id="@+id/basket_leftOdds"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="--- "
                        android:textColor="#666666"
                        android:textSize="@dimen/text_size_12" />

                    <TextView
                        android:id="@+id/tv_a"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="3dp"
                        android:layout_marginRight="3dp"
                        android:text="@string/basket_tv"
                        android:textColor="#666666" />

                    <TextView
                        android:id="@+id/basket_handicap"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=" --- "
                        android:textColor="#666666"
                        android:textSize="@dimen/text_size_12" />

                    <TextView
                        android:id="@+id/tv_b"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="3dp"
                        android:layout_marginRight="3dp"
                        android:text="@string/basket_tv"
                        android:textColor="#666666" />

                    <TextView
                        android:id="@+id/basket_rightOdds"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=" ---"
                        android:textColor="#666666"
                        android:textSize="@dimen/text_size_12" />
                </LinearLayout>
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl_iv2"
                android:layout_width="105dp"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginRight="-32dp"
                android:layout_toLeftOf="@+id/relativeLayout"
                android:layout_toStartOf="@+id/relativeLayout"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/home_icon"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"
                    android:layout_gravity="center" />
            </RelativeLayout>

            <LinearLayout
                android:id="@+id/linearLayout2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignEnd="@+id/rl_iv2"
                android:layout_alignLeft="@+id/rl_iv2"
                android:layout_alignRight="@+id/rl_iv2"
                android:layout_alignStart="@+id/rl_iv2"
                android:layout_below="@+id/rl_iv2"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/home_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:paddingTop="3dp"
                    android:singleLine="true"
                    android:text="----------------------------"
                    android:textColor="#333333"
                    android:textSize="@dimen/text_size_12" />

                <TextView
                    android:id="@+id/basket_home_Ranking"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:paddingBottom="5dp"
                    android:text="[--]"
                    android:textColor="#999999"
                    android:textSize="@dimen/text_size_10" />
            </LinearLayout>

            <RelativeLayout
                android:id="@+id/relativeLayout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:paddingLeft="5dp"
                android:paddingTop="3dp">

                <ImageView
                    android:id="@+id/Iv_guangzhu"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:background="@mipmap/iconfont_guanzhu"
                    android:visibility="invisible" />
            </RelativeLayout>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_alignParentBottom="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:background="#EEEEEE" />
        </RelativeLayout>
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:background="#999999" />
    </RelativeLayout>
</LinearLayout>