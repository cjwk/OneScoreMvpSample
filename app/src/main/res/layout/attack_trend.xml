<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior">


    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <!--走势布局-->

        <!--内容加载进度条_正在加载中-->
        <FrameLayout
            android:id="@+id/fl_attackTrend_loading"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="gone">

            <ProgressBar
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center" />
        </FrameLayout>
        <!--网络访问失败-->
        <FrameLayout
            android:id="@+id/fl_attackTrend_networkError"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="gone">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/refresh" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/x8"
                    android:text="@string/exp_net_status_txt"
                    android:textColor="@color/version"
                    android:textSize="@dimen/text_size_14" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="0dip"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="5dip"
                        android:text="@string/exp__check_txt"
                        android:textColor="@color/msg"
                        android:textSize="@dimen/text_size_14" />

                    <TextView
                        android:id="@+id/reLoading"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/exp_refresh_txt"
                        android:textColor="@color/exp_refresh"
                        android:textSize="@dimen/text_size_14" />
                </LinearLayout>
            </LinearLayout>
        </FrameLayout>

            <!--走势图-->
            <LinearLayout
                android:id="@+id/ll_trend_main"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone">
                <!--角球折线图走势-->
                <RelativeLayout
                    android:id="@+id/rl_cornerTrend_data"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:visibility="visible">

                    <FrameLayout
                        android:id="@+id/fl_main_corner"
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/x440"
                        android:paddingLeft="@dimen/x80"
                        android:paddingRight="@dimen/x40"></FrameLayout>

                    <LinearLayout
                        android:id="@+id/ll_time_name_corner"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/fl_main_corner"
                        android:orientation="horizontal"
                        android:paddingBottom="@dimen/y20"
                        android:paddingLeft="@dimen/x120">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/homeTeam"
                            android:textColor="@color/firstPlayers_homeTeam_bg"
                            android:textSize="@dimen/number_desc" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingLeft="25dip"
                            android:text="@string/guestTeam"
                            android:textColor="@color/firstPlayers_visitingTeam_bg"
                            android:textSize="@dimen/number_desc" />
                    </LinearLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingLeft="@dimen/x30"
                        android:paddingTop="@dimen/y20"
                        android:text="@string/corner"
                        android:textColor="@color/res_pl_color"
                        android:textSize="@dimen/number_desc" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_above="@id/ll_time_name_corner"
                        android:layout_alignParentRight="true"
                        android:paddingRight="@dimen/x140"
                        android:text="@string/game_time"
                        android:textColor="@color/res_pl_color"
                        android:textSize="@dimen/number_desc" />

                </RelativeLayout>
                <!--攻防折线图走势-->
                <RelativeLayout
                    android:id="@+id/rl_attackTrend_data"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:visibility="visible">

                    <FrameLayout
                        android:id="@+id/fl_main"
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/x440"
                        android:paddingLeft="@dimen/x80"
                        android:paddingRight="@dimen/x40"></FrameLayout>

                    <LinearLayout
                        android:id="@+id/ll_time_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/fl_main"
                        android:orientation="horizontal"
                        android:paddingBottom="@dimen/y20"
                        android:paddingLeft="@dimen/x120">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/homeTeam"
                            android:textColor="@color/firstPlayers_homeTeam_bg"
                            android:textSize="@dimen/number_desc" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingLeft="25dip"
                            android:text="@string/guestTeam"
                            android:textColor="@color/firstPlayers_visitingTeam_bg"
                            android:textSize="@dimen/number_desc" />
                    </LinearLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingLeft="@dimen/x30"
                        android:paddingTop="@dimen/y20"
                        android:text="@string/attack"
                        android:textColor="@color/res_pl_color"
                        android:textSize="@dimen/number_desc" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_above="@id/ll_time_name"
                        android:layout_alignParentRight="true"
                        android:paddingRight="@dimen/x140"
                        android:text="@string/game_time"
                        android:textColor="@color/res_pl_color"
                        android:textSize="@dimen/number_desc" />
                </RelativeLayout>
            </LinearLayout>
    </RelativeLayout>
</android.support.v4.widget.NestedScrollView>