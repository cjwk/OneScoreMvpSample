<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:background="@color/white"
              android:orientation="vertical"
              android:paddingLeft="10dp"
              android:paddingRight="10dp"
              android:paddingTop="10dp">

    <android.support.percent.PercentFrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/basket_database_details_ranking_title"
            android:textColor="@color/content_txt_light_grad"
            android:textSize="@dimen/text_size_10"
            app:layout_widthPercent="40%"/>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            app:layout_widthPercent="60%">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="已赛"
                android:textColor="@color/content_txt_light_grad"
                android:textSize="@dimen/text_size_10"/>

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:gravity="center"
                android:text="@string/football_database_details_integral_win_draw_lose_title"
                android:textColor="@color/content_txt_light_grad"
                android:textSize="@dimen/text_size_10"/>

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:gravity="center"
                android:text="@string/football_database_details_integral_gain_loss_title"
                android:textColor="@color/content_txt_light_grad"
                android:textSize="@dimen/text_size_10"/>

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:gravity="center"
                android:text="@string/football_database_details_integral_itnis_title"
                android:textColor="@color/content_txt_light_grad"
                android:textSize="@dimen/text_size_10"/>

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/football_database_details_integral"
                android:textColor="@color/content_txt_light_grad"
                android:textSize="@dimen/text_size_10"/>

        </LinearLayout>

    </android.support.percent.PercentFrameLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/linecolor"/>

</LinearLayout>