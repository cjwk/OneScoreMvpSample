<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="170dp"
    android:layout_marginBottom="@dimen/football_cardview_margin"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    android:layout_marginTop="@dimen/football_cardview_margin"
    android:background="@drawable/tennis_datails_fight_head"
    android:orientation="vertical">

    <!--联赛名-->
    <TextView
        android:id="@+id/tennis_fight_match_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/tennis_datails_fight_title"
        android:ellipsize="end"
        android:gravity="center"
        android:lines="1"
        android:paddingBottom="5dp"
        android:paddingTop="5dp"
        android:textColor="@color/res_time_color"
        android:textSize="@dimen/home_pager_title"
        tools:text="国际友谊赛" />

    <!--比赛时间-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal"
        android:padding="10dp">

        <TextView
            android:id="@+id/tennis_fight_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/res_time_color"
            android:textSize="@dimen/tennis_score_item"
            tools:text="2017-03-13" />

        <TextView
            android:id="@+id/tennis_fight_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="5dp"
            android:textColor="@color/res_time_color"
            android:textSize="@dimen/tennis_score_item"
            tools:text="04:00" />

        <TextView
            android:id="@+id/tennis_fight_desc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"
            android:textColor="@color/res_time_color"
            android:textSize="@dimen/tennis_score_item"
            tools:text="草地" />

    </LinearLayout>

    <!--球员信息-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="42dp"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_weight="1"
            android:background="@drawable/tennis_datails_fight_item"
            android:gravity="center"
            android:paddingBottom="5dp"
            android:paddingTop="5dp">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="-3dp"
                android:src="@mipmap/tennis_datails_item_left_bg" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_weight="4"
                    android:gravity="right|center_vertical"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tennis_fight_home_name"
                        style="@style/tennis_datails_head_name"
                        tools:text="主队name1" />

                    <TextView
                        android:id="@+id/tennis_fight_home_name2"
                        style="@style/tennis_datails_head_name"
                        tools:text="主队name2" />

                </LinearLayout>

                <TextView
                    android:id="@+id/tennis_fight_home_total_score"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:textColor="@color/res_name_color"
                    android:textSize="@dimen/info_center_value"
                    tools:text="2" />

            </LinearLayout>

        </RelativeLayout>

        <LinearLayout
            android:layout_width="3dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical">

            <View
                android:layout_width="1dp"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:background="@color/tennis_details_line_bg" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text=":"
                android:textColor="@color/snooker_score_textcolor"
                android:textSize="@dimen/info_center_value" />

            <View
                android:layout_width="1dp"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:background="@color/tennis_details_line_bg" />

        </LinearLayout>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="42dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_weight="1"
            android:background="@drawable/tennis_datails_fight_item"
            android:gravity="center"
            android:paddingBottom="5dp"
            android:paddingTop="5dp">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="-3dp"
                android:src="@mipmap/tennis_datails_item_right_bg" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tennis_fight_guest_total_score"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:textColor="@color/res_name_color"
                    android:textSize="@dimen/info_center_value"
                    tools:text="2" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="5dp"
                    android:layout_weight="4"
                    android:gravity="left|center_vertical"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tennis_fight_guest_name"
                        style="@style/tennis_datails_head_name"
                        tools:text="主队name1" />

                    <TextView
                        android:id="@+id/tennis_fight_guest_name2"
                        style="@style/tennis_datails_head_name"
                        tools:text="主队name2" />

                </LinearLayout>

            </LinearLayout>

        </RelativeLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal"
        android:paddingTop="10dp">

        <TextView
            android:id="@+id/tennis_fight_home_score1"
            style="@style/tennis_datails_head_score"
            tools:text="4" />

        <TextView
            android:id="@+id/tennis_fight_home_score2"
            style="@style/tennis_datails_head_score"
            tools:text="4" />

        <TextView
            android:id="@+id/tennis_fight_home_score3"
            style="@style/tennis_datails_head_score"
            tools:text="4" />

        <TextView
            android:id="@+id/tennis_fight_home_score4"
            style="@style/tennis_datails_head_score"
            tools:text="4" />

        <TextView
            android:id="@+id/tennis_fight_home_score5"
            style="@style/tennis_datails_head_score"
            tools:text="4" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tennis_fight_guest_score1"
            style="@style/tennis_datails_head_score"
            tools:text="4" />

        <TextView
            android:id="@+id/tennis_fight_guest_score2"
            style="@style/tennis_datails_head_score"
            tools:text="4" />

        <TextView
            android:id="@+id/tennis_fight_guest_score3"
            style="@style/tennis_datails_head_score"
            tools:text="4" />

        <TextView
            android:id="@+id/tennis_fight_guest_score4"
            style="@style/tennis_datails_head_score"
            tools:text="4" />

        <TextView
            android:id="@+id/tennis_fight_guest_score5"
            style="@style/tennis_datails_head_score"
            tools:text="4" />

    </LinearLayout>

</LinearLayout>
