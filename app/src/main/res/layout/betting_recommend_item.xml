<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingRight="15dp"
        android:paddingLeft="15dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="74dp">
            <LinearLayout
                android:id="@+id/betting_specialist_lay"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <com.hhly.mlottery.view.CircleImageView
                        android:id="@+id/betting_portrait_img"
                        android:layout_width="44dp"
                        android:layout_height="44dp"
                        android:src="@mipmap/car_no1"
                        />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="7dp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/betting_specialist_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/text_size_15"
                        android:textColor="@color/betting_recommend_name_color"
                        android:text="专家名字" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingTop="6dp">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">
                            <TextView
                                android:id="@+id/betting_specialist_grade"
                                style="@style/betting_recommend_style"
                                android:background="@drawable/betting_gradual_color_bg"
                                android:text="专家级别"
                                android:textColor="@color/betting_recommend_zhuanjia_grand_color"
                                />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingLeft="10dp">
                            <TextView
                                android:id="@+id/betting_lainzhong"
                                style="@style/betting_recommend_style"
                                android:background="@drawable/betting_shape_corners"
                                android:text="XX连中"
                                android:textColor="@color/betting_recommend_grand_color"
                                />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingLeft="10dp">
                            <TextView
                                android:id="@+id/betting_lately_accuracy"
                                style="@style/betting_recommend_style"
                                android:background="@drawable/betting_shape_corners"
                                android:text="近10中8"
                                android:textColor="@color/betting_recommend_grand_color"
                                />
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>

            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:layout_alignParentRight="true"
                >
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@mipmap/jingcai_icon_next"/>
            </LinearLayout>
        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/linecolor"/>

        <LinearLayout
            android:id="@+id/betting_game_details_lay"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="10dp">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    >
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                        <TextView
                            android:id="@+id/betting_league_name"
                            style="@style/betting_recommend_details_style"
                            android:text="联赛"/>
                        <TextView
                            android:id="@+id/betting_round"
                            style="@style/betting_recommend_details_style"
                            android:paddingLeft="10dp"
                            android:text="轮次"/>
                        <TextView
                            android:id="@+id/betting_date"
                            style="@style/betting_recommend_details_style"
                            android:paddingLeft="10dp"
                            android:text="04-18"/>
                        <TextView
                            android:id="@+id/betting_week"
                            style="@style/betting_recommend_details_style"
                            android:paddingLeft="10dp"
                            android:text="12:18"/>

                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true">
                        <TextView
                            android:id="@+id/betting_concede_points_spf"
                            style="@style/betting_recommend_style"
                            android:background="@drawable/betting_shape_corners_spf"
                            android:textColor="@color/betting_recommend_zhuanjia_spf_color"
                            android:text="让球胜平负"/>
                    </LinearLayout>
                </RelativeLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="20dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">

                            <TextView
                                android:id="@+id/betting_home_name"
                                style="@style/betting_recommend_team_name_style"
                                android:text="主队XXXX" />

                            <TextView
                                android:id="@+id/betting_vs"
                                style="@style/betting_recommend_team_name_style"
                                android:paddingLeft="10dp"
                                android:text="VS" />

                            <TextView
                                android:id="@+id/betting_guest_name"
                                style="@style/betting_recommend_team_name_style"
                                android:paddingLeft="10dp"
                                android:text="客队XXXX" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingTop="10dp">

                            <TextView
                                android:id="@+id/betting_price"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="@dimen/text_size_16"
                                android:textColor="@color/betting_recommend_grand_color"
                                android:text="￥ 8.00" />

                            <TextView
                                android:id="@+id/betting_buy_num"
                                style="@style/betting_recommend_details_style"
                                android:paddingLeft="10dp"
                                android:text="9999已购买" />
                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/betting_tobuy_or_check"
                        android:layout_width="70dp"
                        android:layout_height="28dp"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:gravity="center"
                        android:background="@drawable/betting_shape_corners_buy"
                        >

                        <TextView
                            android:id="@+id/textView11"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/betting_recommend_zhuanjia_grand_color"
                            android:textSize="@dimen/text_size_16"
                            android:text="购买" />
                    </LinearLayout>

                </RelativeLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="20dp"
                android:paddingBottom="15dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/betting_recommend_details_bg_color">

                    <TextView
                        android:id="@+id/betting_recommended_reason"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:singleLine="true"
                        android:padding="10dp"
                        android:textSize="@dimen/text_size_15"
                        android:textColor="@color/betting_recommend_details_color"
                        android:text="推荐理由：推荐理XXX由推荐理由XXX推荐理由推XX荐理由"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:background="@color/betting_recommend_details_bg_color"
            />
    </LinearLayout>

</LinearLayout>