<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <!--首页条目Item布局-->
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/y20"
        android:background="@color/number_info_two_bg" />

    <TextView
        android:id="@+id/tv_home_item_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/y20"
        android:text=""
        android:textColor="@color/content_txt_light_grad"
        android:textSize="@dimen/home_pager_title" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/linecolor" />

    <LinearLayout
        android:id="@+id/ll_home_item_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

    </LinearLayout>
</LinearLayout>