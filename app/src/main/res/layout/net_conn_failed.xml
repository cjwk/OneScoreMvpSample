<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/alertdialog"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="35dp" >

    <TextView
        android:id="@+id/dialog_title"
        android:layout_width="match_parent"
        android:layout_height="35dip"
        android:background="@drawable/about_bg_up"
        android:gravity="center"
        android:text="@string/about_notice"
        android:textColor="@color/week"
        android:textSize="16sp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.4dp"
        android:background="@color/line_football_footer" />

    <TextView
        android:id="@+id/dialog_message"
        android:layout_width="match_parent"
        android:layout_height="35dip"
        android:background="@drawable/about_bg_middle"
        android:gravity="center"
        android:text="@string/about_net_failed"
        android:textColor="@color/msg"
        android:textSize="16sp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.4dp"
        android:background="@color/line_football_footer" />

    <TextView
        android:id="@+id/ok"
        android:layout_width="match_parent"
        android:layout_height="35dip"
        android:background="@drawable/date_last"
        android:gravity="center"
        android:text="@string/about_confirm"
        android:textColor="@color/version"
        android:textSize="16sp" />

</LinearLayout>