<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="40dp"
    android:background="@color/white"
    android:orientation="vertical"
    tools:layout_marginTop="100dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <FrameLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:paddingBottom="5dp"
            android:paddingTop="5dp">

            <TextView
                android:id="@+id/odds_details_timeAndscore_txt"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:gravity="center"
                android:textColor="@color/version"
                android:textSize="@dimen/text_size_10"
                tools:background="@color/odds_details"
                tools:text="9:10\n1:1"
                tools:textColor="@color/white" />

        </FrameLayout>

        <TextView
            android:id="@+id/odds_details_home_txt"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:gravity="center"
            tools:text="2.50" />

        <LinearLayout
            android:id="@+id/odds_details_dish_layout"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="4"
            android:gravity="center">

            <TextView
                android:id="@+id/odds_details_dish_txt"
                android:layout_width="52dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textColor="@color/content_txt_dark_grad"
                tools:text="*2/2.5" />

        </LinearLayout>

        <TextView
            android:id="@+id/odds_details_guest_txt"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:gravity="center"
            tools:text="1.40" />

    </LinearLayout>

    <View
        android:id="@+id/bottom_divider"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_gravity="bottom"
        android:background="@color/line_football_footer" />

</FrameLayout>
