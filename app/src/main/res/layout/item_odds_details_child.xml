<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/line_football_footer"
    android:orientation="vertical">

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!--<TextView
            android:id="@+id/odds_details_timeAndscore_txt"
            style="@style/plateTableBg3"
            android:layout_weight="2"
            android:text="9:10\n1:1"
            android:textColor="@color/version"/>-->

        <TextView
            android:id="@+id/odds_details_timeAndscore_txt"
            android:layout_width="0dp"
            android:layout_height="@dimen/y65"
            android:layout_marginRight="0.2dp"
            android:layout_weight="2"
            android:background="@color/white"
            android:gravity="center"
            android:text="9:10\n1:1"
            android:textColor="@color/version"
            android:textSize="10sp"
            android:layout_gravity="center_vertical"/>
        <TextView
            android:id="@+id/odds_details_home_txt"
            style="@style/plateTableBg3"
            android:layout_weight="3"
            android:text="2.50" />

        <TextView
            android:id="@+id/odds_details_dish_txt"
            style="@style/plateTableBg3"
            android:layout_weight="4"
            android:text="4.5"
            android:textColor="@color/content_txt_dark_grad"/>

        <TextView
            android:id="@+id/odds_details_guest_txt"
            style="@style/plateTableBg3"
            android:layout_weight="3"
            android:text="1.40" />
    </TableRow>

</LinearLayout>
