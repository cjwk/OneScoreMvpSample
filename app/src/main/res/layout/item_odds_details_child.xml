<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:background="@color/line_football_footer"
              android:orientation="vertical">

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!--<TextView
            android:id="@+id/odds_details_timeAndscore_txt"
            style="@style/plateTableBg3"
            android:layout_weight="2"
            android:text="9:10\n1:1"
            android:textColor="@color/version"/>-->

        <TextView
            android:id="@+id/odds_details_timeAndscore_txt"
            android:layout_width="0dp"
            android:layout_height="@dimen/y65"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="0.2dp"
            android:layout_marginEnd="0.2dp"
            android:layout_weight="2"
            android:background="@color/white"
            android:gravity="center"
            android:textColor="@color/version"
            android:textSize="10sp"
            tools:text="9:10\n1:1"/>

        <TextView
            android:id="@+id/odds_details_home_txt"
            style="@style/plateTableBg3"
            android:layout_weight="3"
            tools:text="2.50"/>

        <LinearLayout
            android:id="@+id/odds_details_dish_layout"
            style="@style/plateTableBg3"
            android:layout_weight="4">

            <TextView
                android:id="@+id/odds_details_dish_txt"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="5dp"
                android:gravity="center"
                android:textColor="@color/content_txt_dark_grad"
                tools:text="*两/两点多"/>
        </LinearLayout>

        <TextView
            android:id="@+id/odds_details_guest_txt"
            style="@style/plateTableBg3"
            android:layout_weight="3"
            tools:text="1.40"/>

    </TableRow>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/line_football_footer"/>

</LinearLayout>
