<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="0.5px"
        android:layout_below="@+id/lay_agendafg"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@color/linecolor" />

    <LinearLayout

        android:id="@+id/lay_agendafg"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/live_item_day_txt"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:paddingLeft="8dp"
                android:text="07-01 13:00:00"
                android:textColor="@color/res_name_color"
                android:textSize="@dimen/text_size_11" />

        </LinearLayout>

        <TextView
            android:id="@+id/tv_agendafg_lv_score"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:gravity="center"
            android:text="完"
            android:textColor="@color/bp_disabled_day"
            android:textSize="@dimen/text_size_13" />

        <TextView
            android:id="@+id/snooker_left_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:gravity="center"
            android:text="特鲁姆普"
            android:textColor="@color/res_name_color"
            android:textSize="@dimen/text_size_13" />


        <TextView
            android:id="@+id/snooker_race_total_score"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:gravity="center"
            android:text="17"
            android:textColor="@color/res_name_color"
            android:textSize="@dimen/text_size_13" />


        <TextView
            android:id="@+id/snooker_right_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:gravity="center"
            android:text="梁文博"
            android:textColor="@color/res_name_color"
            android:textSize="@dimen/text_size_13" />

        <ImageView
            android:id="@+id/iconfont"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:gravity="center"
            android:src="@mipmap/iconfont_xiala_1" />
    </LinearLayout>
</RelativeLayout>
