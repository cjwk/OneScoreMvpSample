<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="10dp"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginBottom="5dp"
            android:layout_marginRight="5dp"
            >
            <TextView
                android:id="@+id/analyze_rank_home"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2"
                style="@style/AnalyzeTextHomeAndGuest"
                />
            <TextView
                android:id="@+id/analyze_rank_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/ranking"
                android:layout_centerHorizontal="true"
                style="@style/AnalyzeRankTitleText"
                />
            <TextView
                android:id="@+id/analyze_rank_guest"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="9"
                style="@style/AnalyzeTextHomeAndGuest"
                android:layout_alignParentRight="true"
                />
        </RelativeLayout>
        <ProgressBar
            android:id="@+id/analyze_pro"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="fill_parent"
            android:layout_height="5dp"
            android:max="100"
            android:progress="25"
            android:progressDrawable="@drawable/pro_analyze" />

    </LinearLayout>
</LinearLayout>