<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.hhly.mlottery.frame.basketballframe.BasketPlayersStatisticsFragment">

    <!-- TODO: Update blank fragment layout -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="10dp"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="20dp"
                android:layout_weight="1"
                android:gravity="center"
                >
                <ImageView
                    android:id="@+id/basket_player_guest_team_icon"
                    android:layout_width="17dp"
                    android:layout_height="17dp"
                    android:src="@mipmap/basket_default"
                    />
                <TextView
                    android:id="@+id/basket_player_guest_team_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="骑士队"
                    android:textSize="13sp"
                    android:textColor="@color/tabtitle"
                    android:layout_marginLeft="5dp"
                    android:clickable="true"
                    android:layout_toRightOf="@+id/basket_player_guest_team_icon"
                    />
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="20dp"
                android:layout_weight="1"
                android:gravity="center"
                >
                <ImageView
                    android:id="@+id/basket_player_home_team_icon"
                    android:layout_width="17dp"
                    android:layout_height="17dp"
                    android:src="@mipmap/basket_default"
                    />
                <TextView
                    android:id="@+id/basket_player_home_team_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:clickable="true"
                    android:text="热火队"
                    android:textSize="13sp"
                    android:layout_marginLeft="5dp"
                    android:textColor="@color/black_details_textcolor"
                    android:layout_toRightOf="@+id/basket_player_home_team_icon"
                    />

            </RelativeLayout>
        </LinearLayout>



   <!--球员数据-->
     <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <!--球员一列-->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >
            <TextView
                style="@style/Style_basket_player_title"
                android:layout_width="75dp"
                android:text="球员"
                />
            <android.support.v7.widget.RecyclerView
                android:id="@+id/recycler_basket_player_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

            </android.support.v7.widget.RecyclerView>
        </LinearLayout>


        <!--球员具体数据-->
        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scrollbars="none"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                >
                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@color/usercenter_body_bg"
                    >
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        >
                        <TextView
                            android:id="@+id/basket_player_score1"
                            android:text="时间"
                            style="@style/Style_basket_player_title"
                            />

                        <TextView
                            android:id="@+id/basket_player_score2"
                            style="@style/Style_basket_player_title"
                            android:text="得分"
                            />
                        <TextView
                            android:id="@+id/basket_player_score3"
                            style="@style/Style_basket_player_title"
                            android:text="投篮"
                            />
                        <TextView
                            android:id="@+id/basket_player_score4"
                            style="@style/Style_basket_player_title"
                            android:text="篮板"
                            />
                        <TextView
                            android:id="@+id/basket_player_score5"
                            style="@style/Style_basket_player_title"
                            android:text="助攻"
                            />
                        <TextView
                            android:id="@+id/basket_player_score6"
                            style="@style/Style_basket_player_title"
                            android:text="三分"
                            />
                        <TextView
                            android:id="@+id/basket_player_score7"
                            style="@style/Style_basket_player_title"
                            android:text="抢断"
                            />
                        <TextView
                            android:id="@+id/basket_player_score8"
                            style="@style/Style_basket_player_title"
                            android:text="盖帽"
                            />
                        <TextView
                            android:id="@+id/basket_player_score9"
                            style="@style/Style_basket_player_title"
                            android:text="失误"
                            />
                        <TextView
                            android:id="@+id/basket_player_score10"
                            style="@style/Style_basket_player_title"
                            android:text="犯规"
                            />

                    </LinearLayout>
                </RelativeLayout>
                <android.support.v7.widget.RecyclerView
                    android:id="@+id/recycler_basket_player"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_behavior="@string/appbar_scrolling_view_behavior"
                    >

                </android.support.v7.widget.RecyclerView>
            </LinearLayout>

        </HorizontalScrollView>
      </LinearLayout>

    </LinearLayout>


</android.support.v4.widget.NestedScrollView>
