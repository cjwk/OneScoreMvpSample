<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/home_user_options_bg"
    android:orientation="vertical">
    <!--首页设置选项-->

    <!--头部-->
    <include layout="@layout/layout_header" />

    <!--分割线-->
    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginTop="@dimen/y32"
        android:background="@color/linecolor" />

    <RelativeLayout
        android:id="@+id/rl_language_frame"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/channel_title_front"
        android:clickable="true"
        android:focusable="true">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/y30"
            android:text="@string/language_frame_txt"
            android:textColor="@color/res_name_color"
            android:textSize="@dimen/home_pager_user_title" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:paddingRight="@dimen/x30"
            android:src="@mipmap/unconection_next" />
    </RelativeLayout>
    <!--分割线-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/channel_title_front"
        android:orientation="vertical">

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginLeft="@dimen/x30"
            android:background="@color/linecolor" />
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/rl_about_frame"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/channel_title_front"
        android:clickable="true"
        android:focusable="true">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/y30"
            android:text="@string/about_frame_txt"
            android:textColor="@color/res_name_color"
            android:textSize="@dimen/home_pager_user_title" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:paddingRight="@dimen/x30"
            android:src="@mipmap/unconection_next" />
    </RelativeLayout>
    <!--分割线-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/channel_title_front"
        android:orientation="vertical">

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginLeft="@dimen/x30"
            android:background="@color/linecolor" />
    </LinearLayout>
    <!--用户反馈-->
    <RelativeLayout
        android:id="@+id/rl_user_feedback"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/channel_title_front"
        android:clickable="true"
        android:focusable="true"
        android:visibility="visible">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/y30"
            android:text="@string/user_feedback"
            android:textColor="@color/res_name_color"
            android:textSize="@dimen/home_pager_user_title" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:paddingRight="@dimen/x30"
            android:src="@mipmap/unconection_next" />
    </RelativeLayout>
    <!--分割线-->
    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/linecolor" />
</LinearLayout>