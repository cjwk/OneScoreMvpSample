<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/home_item_bg"
              android:orientation="vertical">
    <!--首页设置选项-->

    <!--头部-->
    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@mipmap/center_backround"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/public_img_back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerInParent="true"
                android:padding="10dp"
                android:src="@mipmap/back"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_marginTop="15dp"
                android:padding="5dp"
                android:text="@string/personal_center"
                android:textColor="@color/white"
                android:textSize="@dimen/home_pager_user_title"/>


        </RelativeLayout>

        <ImageView
            android:id="@+id/user_info_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:src="@mipmap/center_head"
            />

        <TextView
            android:id="@+id/tv_nickname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:paddingTop="7dp"
            android:textColor="@color/white"
            android:visibility="gone"/>

        <TextView
            android:id="@+id/login"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:paddingTop="7dp"
            android:text="@string/Login_register"
            android:textColor="@color/white"
            android:textSize="@dimen/home_pager_user_title"/>

    </LinearLayout>
    <!--分割线-->
    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginTop="10dp"
        android:background="@color/linecolor"/>

    <RelativeLayout
        android:id="@+id/rl_language_frame"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/channel_title_front"
        android:clickable="true"
        android:focusable="true">

        <ImageView
            android:id="@+id/center_lan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            android:src="@mipmap/center_language"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/center_lan"
            android:padding="15dp"
            android:text="@string/language_frame_txt"
            android:textColor="@color/res_name_color"
            android:textSize="@dimen/home_pager_user_title"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:paddingRight="15dp"
            android:src="@mipmap/unconection_next"/>
    </RelativeLayout>
    <!--分割线-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/channel_title_front"
        android:orientation="vertical">

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginLeft="10dp"
            android:background="@color/linecolor"/>
    </LinearLayout>
    <!--用户反馈-->
    <RelativeLayout
        android:id="@+id/rl_user_feedback"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/channel_title_front"
        android:clickable="true"
        android:focusable="true"
        android:visibility="visible">

        <ImageView
            android:id="@+id/center_feed"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            android:src="@mipmap/center_feedback"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/center_feed"
            android:padding="15dp"
            android:text="@string/user_feedback"
            android:textColor="@color/res_name_color"
            android:textSize="@dimen/home_pager_user_title"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:paddingRight="15dp"
            android:src="@mipmap/unconection_next"/>
    </RelativeLayout>
    <!--分割线-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/channel_title_front"
        android:orientation="vertical">

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginLeft="10dp"
            android:background="@color/linecolor"/>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="13dp"
        android:background="@color/linecolor"/>

    <RelativeLayout
        android:id="@+id/rl_about_frame"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/channel_title_front"
        android:clickable="true"
        android:focusable="true">

        <ImageView
            android:id="@+id/center_about"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            android:src="@mipmap/center_about"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/center_about"
            android:padding="15dp"
            android:text="@string/about_frame_txt"
            android:textColor="@color/res_name_color"
            android:textSize="@dimen/home_pager_user_title"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:paddingRight="15dp"
            android:src="@mipmap/unconection_next"/>
    </RelativeLayout>
    <!--分割线-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/channel_title_front"
        android:orientation="vertical">

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/linecolor"/>
    </LinearLayout>

    <!-- 分割线
     <View
         android:layout_width="match_parent"
         android:layout_height="0.5dp"
         android:background="@color/linecolor"/>
 -->
    <TextView
        android:id="@+id/tv_logout"
        style="@style/login_textview_logout"
        android:layout_gravity="center"
        android:layout_marginTop="50dp"
        android:text="@string/logout"
        android:visibility="gone"
        />

</LinearLayout>