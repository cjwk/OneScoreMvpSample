<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- 标题头 -->
    <include layout="@layout/layout_header" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="#f5f5f5"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="15dp"
                    android:text="@string/basket_odd_setting"
                    android:textColor="#999999"
                    android:textSize="@dimen/text_size_14"/>
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.4dp"
                android:background="#dddddd"/>

            <RelativeLayout
                android:id="@+id/rl_snooker_alet"
                android:layout_width="fill_parent"
                android:layout_height="50dp"
                android:background="#FFFFFFFF">

                <TextView
                    android:id="@+id/tv_snooker_alet"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="15dp"
                    android:text="@string/basket_alet"
                    android:textColor="#333333"
                    android:textSize="@dimen/text_size_15"/>

                <RadioButton
                    android:id="@+id/rd_snooker_alet"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="18dp"
                    android:button="@drawable/basketball_setting"
                    android:clickable="false"/>
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.4dp"
                android:background="#dddddd"/>

            <RelativeLayout
                android:id="@+id/rl_snooker_eur"
                android:layout_width="fill_parent"
                android:layout_height="50dp"
                android:background="#FFFFFFFF"
                android:gravity="center_vertical">

                <TextView
                    android:id="@+id/tv_snooker_eur"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="15dp"
                    android:text="@string/basket_eur"
                    android:textColor="#333333"
                    android:textSize="@dimen/text_size_15"/>

                <RadioButton
                    android:id="@+id/rd_snooker_eur"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="18dp"
                    android:button="@drawable/basketball_setting"
                    android:clickable="false">
                </RadioButton>
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.4dp"
                android:background="#dddddd"/>

            <RelativeLayout
                android:id="@+id/rl_snooker_asize"
                android:layout_width="fill_parent"
                android:layout_height="50dp"
                android:background="#FFFFFFFF"
                android:gravity="center_vertical">

                <TextView
                    android:id="@+id/tv_snooker_asize"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="15dp"
                    android:text="@string/basket_asize"
                    android:textColor="#333333"
                    android:textSize="@dimen/text_size_15"/>

                <RadioButton
                    android:id="@+id/rd_snooker_asize"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="18dp"
                    android:button="@drawable/basketball_setting"
                    android:clickable="false">
                </RadioButton>
            </RelativeLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="0.4dp"
                android:background="#dddddd"/>

            <RelativeLayout
                android:id="@+id/rl_snooker_single_twins"
                android:layout_width="fill_parent"
                android:layout_height="50dp"
                android:background="#FFFFFFFF"
                android:gravity="center_vertical">

                <TextView
                    android:id="@+id/tv_snooker_single_double"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="15dp"
                    android:text="单双"
                    android:textColor="#333333"
                    android:textSize="@dimen/text_size_15"/>

                <RadioButton
                    android:id="@+id/rd_snooker_single_twin"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="18dp"
                    android:button="@drawable/basketball_setting"
                    android:clickable="false">
                </RadioButton>
            </RelativeLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="0.4dp"
                android:background="#dddddd"/>
            <RelativeLayout
                android:id="@+id/rl_snooker_noshow"
                android:layout_width="fill_parent"
                android:layout_height="50dp"
                android:background="#FFFFFFFF"
                android:gravity="center_vertical">

                <TextView
                    android:id="@+id/tv_snooker_noshow"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="15dp"
                    android:text="@string/basket_noshow"
                    android:textColor="#333333"
                    android:textSize="@dimen/text_size_15"/>

                <RadioButton
                    android:id="@+id/rd_snooker_noshow"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="18dp"
                    android:button="@drawable/basketball_setting"
                    android:clickable="false">
                </RadioButton>
            </RelativeLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>