<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >

        <LinearLayout
            android:id="@+id/basket_database_details_data"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >
            <!--分割线-->
            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/content_txt_light_grad" />

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/selected_bg">

            <RadioGroup
                android:id="@+id/head_radiogroup"
                android:layout_width="match_parent"
                android:layout_height="36dp"
                android:layout_margin="13dp"
                android:gravity="center"
                android:orientation="horizontal"
                >
                <!--联赛统计-->
                <RadioButton
                    android:id="@+id/basket_database_details_statistics"
                    style="@style/odds_radio_button"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/odds_selected_plate"
                    android:checked="true"
                    android:text="联赛统计"/>
                <!--联赛之最-->
                <RadioButton
                    android:id="@+id/basket_database_details_most"
                    style="@style/odds_radio_button"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/odds_selected_big"
                    android:text="联赛之最"/>

            </RadioGroup>
            </FrameLayout>
            <!--攻击力最强-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                >

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:gravity="center_vertical"
                    android:paddingLeft="10dp"
                    android:text="攻击力最强"
                    android:textSize="@dimen/text_size_13"/>

                <!--分割线-->
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:background="@color/content_txt_light_grad" />

                <com.hhly.mlottery.view.AnalyzeListView
                    android:id="@+id/basket_database_leagueMost_list1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
            </LinearLayout>

            <!--攻击力最弱-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                >

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:gravity="center_vertical"
                    android:paddingLeft="10dp"
                    android:text="攻击力最弱"
                    android:textSize="@dimen/text_size_13"/>

                <!--分割线-->
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:background="@color/content_txt_light_grad" />

                <com.hhly.mlottery.view.AnalyzeListView
                    android:id="@+id/basket_database_leagueMost_list2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
            <!--防守最强-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                >

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:gravity="center_vertical"
                    android:paddingLeft="10dp"
                    android:text="防守最强"
                    android:textSize="@dimen/text_size_13"/>

                <!--分割线-->
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:background="@color/content_txt_light_grad" />

                <com.hhly.mlottery.view.AnalyzeListView
                    android:id="@+id/basket_database_leagueMost_list3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
            <!--防守最弱-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                >

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:gravity="center_vertical"
                    android:paddingLeft="10dp"
                    android:text="防守最弱"
                    android:textSize="@dimen/text_size_13"/>

                <!--分割线-->
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:background="@color/content_txt_light_grad" />

                <com.hhly.mlottery.view.AnalyzeListView
                    android:id="@+id/basket_database_leagueMost_list4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
            </LinearLayout>

        </LinearLayout>


        <!--正在加载中显示进度条-->
        <FrameLayout
            android:id="@+id/basket_database_loading_details"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingTop="15dp"
            android:visibility="gone"
            >

            <ProgressBar
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center" />
        </FrameLayout>

        <!--网络不给力提示-->
        <LinearLayout
            android:id="@+id/basket_database_details_refresh"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:gravity="center"
            android:orientation="vertical"
            android:visibility="gone"
            >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/refresh" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="@string/exp_net_status_txt"
                android:textColor="@color/version"
                android:textSize="@dimen/text_size_14" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="0dip"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="5dip"
                    android:text="@string/exp__check_txt"
                    android:textColor="@color/msg"
                    android:textSize="@dimen/text_size_14" />

                <TextView
                    android:id="@+id/reLoadin"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/exp_refresh_txt"
                    android:textColor="@color/exp_refresh"
                    android:textSize="@dimen/text_size_14" />
            </LinearLayout>
        </LinearLayout>

        <!--暂无数据提示-->
            <TextView
                android:id="@+id/basket_database_details_nodata"
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:gravity="center"
                android:textSize="20dp"
                android:text="@string/nodata"
                android:visibility="gone"
                />
    </LinearLayout>
</android.support.v4.widget.NestedScrollView>