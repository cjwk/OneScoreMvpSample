<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >

        <LinearLayout
            android:id="@+id/basket_database_details_data"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >

            <!--攻击力最强-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                >

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:gravity="center_vertical"
                    android:paddingLeft="10dp"
                    android:text="@string/basket_database_details_leagueMost_strongestAttack"
                    android:textColor="@color/statistics_textcolor"
                    android:textSize="@dimen/text_size_13"/>

                <!--分割线-->
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:background="@color/line_football_footer"
                    />

                <com.hhly.mlottery.widget.NoScrollListView
                    android:id="@+id/basket_database_leagueMost_list1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:divider="@color/linecolor"
                    android:dividerHeight="0.5px"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:background="@color/line_football_footer"
                    />
                <!--分割线-->
                <View
                    android:layout_width="match_parent"
                    android:layout_height="30px"
                    android:background="@color/home_item_bg" />
            </LinearLayout>

            <!--攻击力最弱-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                >

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:gravity="center_vertical"
                    android:paddingLeft="10dp"
                    android:text="@string/basket_database_details_leagueMost_weakestAttack"
                    android:textColor="@color/statistics_textcolor"
                    android:textSize="@dimen/text_size_13"/>

                <!--分割线-->
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:background="@color/line_football_footer" />

                <com.hhly.mlottery.widget.NoScrollListView
                    android:id="@+id/basket_database_leagueMost_list2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:divider="@color/linecolor"
                    android:dividerHeight="0.5px"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:background="@color/line_football_footer"/>
                <!--分割线-->
                <View
                    android:layout_width="match_parent"
                    android:layout_height="30px"
                    android:background="@color/home_item_bg" />
            </LinearLayout>
            <!--防守最强-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                >

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:gravity="center_vertical"
                    android:paddingLeft="10dp"
                    android:text="@string/basket_database_details_leagueMost_strongestDefense"
                    android:textColor="@color/statistics_textcolor"
                    android:textSize="@dimen/text_size_13"/>

                <!--分割线-->
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:background="@color/line_football_footer" />

                <com.hhly.mlottery.widget.NoScrollListView
                    android:id="@+id/basket_database_leagueMost_list3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:divider="@color/linecolor"
                    android:dividerHeight="0.5px"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:background="@color/line_football_footer"/>
                <!--分割线-->
                <View
                    android:layout_width="match_parent"
                    android:layout_height="30px"
                    android:background="@color/home_item_bg" />
            </LinearLayout>
            <!--防守最弱-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                >

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:gravity="center_vertical"
                    android:paddingLeft="10dp"
                    android:text="@string/basket_database_details_leagueMost_weakestDefense"
                    android:textColor="@color/statistics_textcolor"
                    android:textSize="@dimen/text_size_13"/>

                <!--分割线-->
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:background="@color/line_football_footer" />

                <com.hhly.mlottery.widget.NoScrollListView
                    android:id="@+id/basket_database_leagueMost_list4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:divider="@color/linecolor"
                    android:dividerHeight="0.5px"/>
                <!--&lt;!&ndash;分割线&ndash;&gt;-->
                <!--<View-->
                    <!--android:layout_width="match_parent"-->
                    <!--android:layout_height="30px"-->
                    <!--android:background="@color/home_item_bg" />-->
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>
</android.support.v4.widget.NestedScrollView>