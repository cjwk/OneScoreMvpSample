<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal"
        >
        <TextView
            style="@style/basket_team_changjun"
            android:text="场均得分"
            />
        <View
            android:layout_width="0.5dp"
            android:layout_height="match_parent"
            android:background="@color/linecolor"
            />
        <TextView
            style="@style/basket_team_changjun"
            android:text="场均助攻"
            />
        <View
            android:layout_width="0.5dp"
            android:layout_height="match_parent"
            android:background="@color/linecolor"
            />
        <TextView
            style="@style/basket_team_changjun"
            android:text="场均篮板"
            />
        <View
            android:layout_width="0.5dp"
            android:layout_height="match_parent"
            android:background="@color/linecolor"
            />
        <TextView
            style="@style/basket_team_changjun"
            android:text="场均失分"
            />
        <View
            android:layout_width="0.5dp"
            android:layout_height="match_parent"
            android:background="@color/linecolor"
            />
        <TextView
            style="@style/basket_team_changjun"
            android:text="场均失误"
            />

    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/linecolor"
        />
    <!--第二栏-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal"
        >
        <TextView
            android:id="@+id/basket_team_score"
            style="@style/basket_team_changjun"
            />
        <View
            android:layout_width="0.5dp"
            android:layout_height="match_parent"
            android:background="@color/linecolor"
            />
        <TextView
            android:id="@+id/basket_team_assistant"
            style="@style/basket_team_changjun"
            />
        <View
            android:layout_width="0.5dp"
            android:layout_height="match_parent"
            android:background="@color/linecolor"
            />
        <TextView
            android:id="@+id/basket_team_bord"
            style="@style/basket_team_changjun"
            />
        <View
            android:layout_width="0.5dp"
            android:layout_height="match_parent"
            android:background="@color/linecolor"
            />
        <TextView
            android:id="@+id/basket_team_lose_score"
            style="@style/basket_team_changjun"
            />
        <View
            android:layout_width="0.5dp"
            android:layout_height="match_parent"
            android:background="@color/linecolor"
            />
        <TextView
            android:id="@+id/basket_team_misplay"
            style="@style/basket_team_changjun"
            />

    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/linecolor"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal"
        >
        <TextView
            android:id="@+id/basket_team_score_rank"
            style="@style/basket_team_changjun"
            />
        <View
            android:layout_width="0.5dp"
            android:layout_height="match_parent"
            android:background="@color/linecolor"
            />
        <TextView
            android:id="@+id/basket_team_assistant_rank"
            style="@style/basket_team_changjun"
            />
        <View
            android:layout_width="0.5dp"
            android:layout_height="match_parent"
            android:background="@color/linecolor"
            />
        <TextView
            android:id="@+id/basket_team_bord_rank"
            style="@style/basket_team_changjun"
            />
        <View
            android:layout_width="0.5dp"
            android:layout_height="match_parent"
            android:background="@color/linecolor"
            />
        <TextView
            android:id="@+id/basket_team_lose_score_rank"
            style="@style/basket_team_changjun"
            />
        <View
            android:layout_width="0.5dp"
            android:layout_height="match_parent"
            android:background="@color/linecolor"
            />
        <TextView
            android:id="@+id/basket_team_misplay_rank"
            style="@style/basket_team_changjun"
            />

    </LinearLayout>
</LinearLayout>