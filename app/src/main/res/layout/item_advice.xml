<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="5dp"
    >
    <android.support.v7.widget.CardView
        android:id="@+id/advice_cardView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="10dp"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="10dp"
            >
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >
                <ImageView
                    android:id="@+id/advice_user_icon"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@mipmap/center_head"
                    />
                <TextView
                    android:id="@+id/advice_user_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="13sp"
                    android:textColor="@color/mdy_666"
                    android:text="刘JACK"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@id/advice_user_icon"
                    android:layout_marginLeft="10dp"
                    />
                <TextView
                    android:id="@+id/advice_user_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2016-12-10"
                    android:textSize="13sp"
                    android:textColor="@color/mdy_999"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@id/advice_user_name"
                    android:layout_marginLeft="10dp"

                    />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_alignParentRight="true"
                    >
                    <ImageView
                        android:id="@+id/advice_user_img_like"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@mipmap/advice_like_white"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp"
                        android:layout_marginTop="2dp"
                        />
                    <TextView
                        android:id="@+id/advice_user_like"
                        android:layout_width="30dp"
                        android:layout_height="wrap_content"
                        android:textSize="13sp"
                        android:text="0000"
                        />
                </LinearLayout>


            </RelativeLayout>

            <!--用户建议-->

            <TextView
                android:id="@+id/advice_user_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/mdy_333"
                android:textSize="13sp"
                android:layout_marginTop="10dp"
                android:text=""
                />

            <RelativeLayout
                android:id="@+id/ll_product_has_answer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:paddingBottom="10dp"
                >
                <ImageView
                    android:id="@+id/product_icon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/product_advice"
                    android:layout_alignParentRight="true"
                    />
                <TextView
                    android:id="@+id/product_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="13sp"
                    android:textColor="@color/product_advice"
                    android:layout_toLeftOf="@id/product_icon"
                    android:layout_marginRight="8dp"
                    android:text="@string/product_advice"
                    />

                <TextView
                    android:id="@+id/advice_product_reply"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textColor="@color/mdy_333"
                    android:gravity="left"
                    android:background="@drawable/shape_product_advice"
                    android:layout_alignParentRight="true"
                    android:layout_below="@id/product_1"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="40dp"
                    />

            </RelativeLayout>
        </LinearLayout>

    </android.support.v7.widget.CardView>



</LinearLayout>