<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:emojicon="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"

    >

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#dddddd"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="#f5f5f5"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="10dp">

        <io.github.rockerhieu.emojicon.EmojiconEditText
            android:id="@+id/et_emoji_input"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:background="@drawable/selector_counselcomment_edit"
            android:gravity="center_vertical"
            android:hint="说点什么..."
            android:maxLength="100"
            android:paddingLeft="10dp"
            android:textColor="#333333"
            android:textColorHint="#999999"
            android:textSize="14sp"
            emojicon:emojiconSize="20sp" />

        <!--emoji-->
        <ImageView
            android:id="@+id/iv_gallery"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"
            android:src="@mipmap/basket_lose" />

        <TextView
            android:id="@+id/tv_send"
            android:layout_width="64dp"
            android:layout_height="37dp"
            android:layout_marginLeft="10dp"
            android:background="@drawable/selector_counselcomment_send"
            android:gravity="center"
            android:paddingBottom="3dp"
            android:paddingTop="3dp"
            android:text="@string/comment_send"
            android:textColor="#fff" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#dddddd"/>

    <!--表情展示窗口-->
    <LinearLayout
        android:id="@+id/ll_gallery_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="gone">

        <!--表情容器-->
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:background="#dddddd">

            <android.support.v4.view.ViewPager
                android:id="@+id/chart_viewPager"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

        </FrameLayout>

        <!--底下表情种类-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iv_select_icon"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="#dddddd"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:src="@mipmap/basket_win" />

            <ImageView
                android:id="@+id/iv_select_emoji"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:src="@mipmap/basket_draw" />

        </LinearLayout>

    </LinearLayout>
</LinearLayout>


