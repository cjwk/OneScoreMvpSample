<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#fff"
                android:clickable="true"
                android:focusable="true">
    <!--热门赛事条目-->
    <!--底部图标-->
    <ImageView
        android:id="@+id/iv_game_icon_bottom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"/>
    <!--赛事标题条-->
    <LinearLayout
        android:id="@+id/ll_one"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_game_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/x20"
            android:paddingTop="@dimen/y20"
            android:text=""
            android:textColor="@color/content_txt_black"
            android:textSize="@dimen/number_title"/>
    </LinearLayout>

    <!--比分和日期 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical"
        android:paddingTop="@dimen/y20">
        <!--战况上半部分-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="bottom"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_game_score_home"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="right"
                android:text=""
                android:textSize="@dimen/home_pager_user_title"/>

            <TextView
                android:id="@+id/tv_game_score_vs"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/x6"
                android:paddingRight="@dimen/x6"
                android:text="VS"
                android:textColor="@color/content_txt_light_grad"
                android:textSize="@dimen/home_pager_title"/>

            <TextView
                android:id="@+id/tv_game_score_guest"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text=""
                android:textSize="@dimen/home_pager_user_title"/>

        </LinearLayout>
        <!--战况下半部分-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:paddingTop="@dimen/y4">

            <TextView
                android:id="@+id/tv_game_score_desc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:text=""
                android:textColor="@color/content_txt_dark_grad"
                android:textSize="@dimen/number_desc"/>
        </LinearLayout>
    </LinearLayout>
    <!--图标和分类条-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">
        <!--左队徽-->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/y10"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/iv_game_icon_home"
                android:layout_width="@dimen/y110"
                android:layout_height="@dimen/y110"
                android:layout_gravity="center_horizontal"
                android:paddingBottom="@dimen/y10"
                android:paddingTop="@dimen/y16"
                android:src="@mipmap/home_score_item_icon_def"/>

            <TextView
                android:id="@+id/tv_game_name_home"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="ccc"
                android:textColor="@color/content_txt_black"
                android:textSize="@dimen/home_pager_title"/>

        </LinearLayout>
        <!--右队徽-->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/y10"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/iv_game_icon_guest"
                android:layout_width="@dimen/y110"
                android:layout_height="@dimen/y110"
                android:layout_gravity="center_horizontal"
                android:paddingBottom="@dimen/y10"
                android:paddingTop="@dimen/y16"
                android:src="@mipmap/home_score_item_icon_def"/>

            <TextView
                android:id="@+id/tv_game_name_guest"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="ddd"
                android:textColor="@color/content_txt_black"
                android:textSize="@dimen/home_pager_title"/>

        </LinearLayout>
    </LinearLayout>
</RelativeLayout>