<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

    >


    <LinearLayout

        android:id="@+id/lay_agendafg"
        android:layout_width="match_parent"
        android:layout_height="@dimen/y85"
        android:orientation="horizontal"
        android:padding="@dimen/x10">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="0.8">

            <TextView
                android:paddingLeft="8dp"
                android:id="@+id/tv_agendafg_lv_data"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="03/25"
                android:textColor="@color/res_name_color"
                android:textSize="@dimen/text_size_11"/>

            <TextView
                android:id="@+id/tv_agendafg_lv_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/x30"
                android:text="18:00"
                android:textColor="@color/res_name_color"
                android:textSize="@dimen/text_size_11"/>
        </LinearLayout>


        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.4"
            >

            <TextView
                android:id="@+id/tv_agendafg_lv_teamnamel"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="0.7"
                android:gravity="center|right"
                android:text="阿根廷阿根廷"
                android:textColor="@color/res_name_color"
                android:textSize="@dimen/text_size_13"/>

            <TextView
                android:id="@+id/tv_agendafg_lv_score"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="0.2"
                android:gravity="center"
                android:text="2:0"
                android:textColor="@color/calendar_header"
                android:textSize="@dimen/text_size_13"/>


            <TextView
                android:id="@+id/tv_agendafg_lv_teamnamer"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="0.8"
                android:text="切尔西切尔西切尔"
                android:textColor="@color/res_name_color"
                android:textSize="@dimen/text_size_13"
                />
        </LinearLayout>


    </LinearLayout>

    <TextView
        android:layout_below="@+id/lay_agendafg"
        android:layout_width="match_parent"
        android:layout_height="0.5px"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@color/linecolor"/>
</RelativeLayout>
