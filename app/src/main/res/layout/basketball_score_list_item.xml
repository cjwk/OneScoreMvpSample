<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:yxq="http://schemas.android.com/apk/res-auto"
    android:id="@+id/basket_card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/football_cardview_margin"
    android:layout_marginLeft="8dp"
    android:layout_marginRight="8dp"
    android:layout_marginTop="@dimen/football_cardview_margin"
    android:clickable="true"
    yxq:cardBackgroundColor="@color/white"
    yxq:cardCornerRadius="5dp"
    yxq:cardElevation="0.5dp"
    android:foreground="?android:attr/selectableItemBackground">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:paddingLeft="15dp"
            android:paddingRight="10dp">

            <TextView
                android:id="@+id/backetball_matches_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="NBA"
                android:textColor="#E11000"
                android:textSize="@dimen/text_size_12" />

            <TextView
                android:id="@+id/backetball_game_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@id/backetball_matches_name"
                android:paddingLeft="10dp"
                android:text="10:00"
                android:textColor="#666666"
                android:textSize="@dimen/text_size_12" />

            <TextView
                android:id="@+id/backetball_st_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@id/backetball_game_time"
                android:paddingLeft="10dp"
                android:text="1st"
                android:textColor="#1CDA4A"
                android:textSize="@dimen/text_size_12" />

            <TextView
                android:id="@+id/backetball_ongoing_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@id/backetball_st_time"
                android:paddingLeft="5dp"
                android:text="00:50.6"
                android:textColor="#1CDA4A"
                android:textSize="@dimen/text_size_12" />

            <TextView
                android:id="@+id/backetball_apos"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="3dp"
                android:layout_toRightOf="@id/backetball_ongoing_time"
                android:text="&apos;"
                android:textColor="#1CDA4A"
                android:textSize="@dimen/text_size_12" />

            <LinearLayout
                android:id="@+id/basket_details_odds"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:layout_gravity="center_horizontal"
                android:orientation="horizontal"
                android:paddingBottom="3dp">

                <TextView
                    android:id="@+id/basket_leftOdds"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2.05 "
                    android:textColor="#666666"
                    android:textSize="@dimen/text_size_12" />

                <TextView
                    android:id="@+id/tv_a"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="3dp"
                    android:layout_marginRight="3dp"
                    android:text="@string/basket_tv"
                    android:textColor="#666666" />

                <TextView
                    android:id="@+id/basket_handicap"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" 2.05 "
                    android:textColor="#666666"
                    android:textSize="@dimen/text_size_12" />

                <TextView
                    android:id="@+id/tv_b"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="3dp"
                    android:layout_marginRight="3dp"
                    android:text="@string/basket_tv"
                    android:textColor="#666666" />

                <TextView
                    android:id="@+id/basket_rightOdds"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" 2.05"
                    android:textColor="#666666"
                    android:textSize="@dimen/text_size_12" />
            </LinearLayout>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.2"
                    android:orientation="vertical"
                    android:paddingLeft="10dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center_vertical"
                                android:padding="3dp">

                                <ImageView
                                    android:id="@+id/guest_icon"
                                    android:layout_width="20dp"
                                    android:layout_height="20dp"
                                    android:background="@mipmap/basket_default" />

                                <TextView
                                    android:id="@+id/guest_name"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:ellipsize="end"
                                    android:singleLine="true"
                                    android:maxEms="7"
                                    android:paddingLeft="5dp"
                                    android:text="客队"
                                    android:textColor="#333333"
                                    android:textSize="@dimen/text_size_12" />

                                <TextView
                                    android:id="@+id/basket_guest_Ranking"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:ellipsize="end"
                                    android:gravity="center|left"
                                    android:lines="1"
                                    android:paddingLeft="5dp"
                                    android:text="[西二]"
                                    android:textColor="#999999"
                                    android:textSize="@dimen/text_size_10" />


                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center_vertical"
                                android:padding="3dp">

                                <ImageView
                                    android:id="@+id/home_icon"
                                    android:layout_width="20dp"
                                    android:layout_height="20dp"
                                    android:background="@mipmap/basket_default" />

                                <TextView
                                    android:id="@+id/home_name"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:ellipsize="end"
                                    android:singleLine="true"
                                    android:maxEms="7"
                                    android:paddingLeft="5dp"
                                    android:text="客队"
                                    android:textColor="#333333"
                                    android:textSize="@dimen/text_size_12" />

                                <TextView
                                    android:id="@+id/basket_home_Ranking"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:ellipsize="end"
                                    android:gravity="center|left"
                                    android:lines="1"
                                    android:paddingLeft="5dp"
                                    android:text="[西二]"
                                    android:textColor="#999999"
                                    android:textSize="@dimen/text_size_10" />

                            </LinearLayout>
                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/ll_basket_desc_content"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:padding="5dp">

                        <TextView
                            android:id="@+id/backetball_total"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/basket_total"
                            android:textColor="#666666"
                            android:textSize="@dimen/text_size_12" />

                        <TextView
                            android:id="@+id/backetball_score_total"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingLeft="3dp"
                            android:text="145/145"
                            android:textColor="#666666"
                            android:textSize="@dimen/text_size_12" />

                        <TextView
                            android:id="@+id/backetball_differ"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingLeft="8dp"
                            android:text="@string/basket_differ"
                            android:textColor="#666666"
                            android:textSize="@dimen/text_size_12" />

                        <TextView
                            android:id="@+id/backetball_score_differ"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingLeft="3dp"
                            android:text="13"
                            android:textColor="#666666"
                            android:textSize="@dimen/text_size_12" />

                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/score_data"
                    android:layout_width="0dp"
                    android:layout_weight="1.1"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:orientation="vertical"
                    >
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:padding="3dp">

                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:gravity="center">

                                    <LinearLayout
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:gravity="center"
                                        android:paddingRight="5dp">

                                        <TextView
                                            android:id="@+id/guest_score1"
                                            android:layout_width="20dp"
                                            android:layout_height="wrap_content"
                                            android:gravity="center"
                                            android:text="66"
                                            android:textSize="@dimen/text_size_12" />

                                        <TextView
                                            android:id="@+id/guest_score2"
                                            android:layout_width="20dp"
                                            android:layout_height="wrap_content"
                                            android:gravity="center"
                                            android:paddingLeft="5dp"
                                            android:text="66"
                                            android:textSize="@dimen/text_size_12" />

                                        <TextView
                                            android:id="@+id/guest_score3"
                                            android:layout_width="20dp"
                                            android:layout_height="wrap_content"
                                            android:gravity="center"
                                            android:paddingLeft="5dp"
                                            android:text="66"
                                            android:textSize="@dimen/text_size_12" />

                                        <TextView
                                            android:id="@+id/guest_score4"
                                            android:layout_width="20dp"
                                            android:layout_height="wrap_content"
                                            android:gravity="center"
                                            android:paddingLeft="5dp"
                                            android:text="66"
                                            android:textSize="@dimen/text_size_12" />

                                        <TextView
                                            android:id="@+id/guest_score_ot"
                                            android:layout_width="20dp"
                                            android:layout_height="wrap_content"
                                            android:gravity="center"
                                            android:paddingLeft="5dp"
                                            android:text="66"
                                            android:textSize="@dimen/text_size_12"
                                            android:visibility="gone" />
                                    </LinearLayout>

                                    <!--<View-->
                                        <!--android:id="@+id/halving_line"-->
                                        <!--android:layout_width="0.5dp"-->
                                        <!--android:layout_height="match_parent"-->
                                        <!--android:layout_gravity="center_horizontal"-->
                                        <!--android:background="@color/snooker_line" />-->

                                    <ImageView
                                        android:layout_width="1dp"
                                        android:layout_height="20dp" />

                                    <!--<TextView-->
                                        <!--android:id="@+id/basket_guest_all_score"-->
                                        <!--android:layout_width="30dp"-->
                                        <!--android:layout_height="wrap_content"-->
                                        <!--android:gravity="center"-->
                                        <!--android:paddingLeft="5dp"-->
                                        <!--android:text="666"-->
                                        <!--android:textColor="#0085E1"-->
                                        <!--android:textSize="@dimen/text_size_12" />-->
                                </LinearLayout>
                            </LinearLayout>
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:gravity="center"
                                    android:padding="3dp">

                                    <LinearLayout
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:gravity="center"
                                        android:paddingRight="5dp">

                                        <TextView
                                            android:id="@+id/home_score1"
                                            android:layout_width="20dp"
                                            android:layout_height="wrap_content"
                                            android:gravity="center"
                                            android:text="66"
                                            android:textSize="@dimen/text_size_12" />

                                        <TextView
                                            android:id="@+id/home_score2"
                                            android:layout_width="20dp"
                                            android:layout_height="wrap_content"
                                            android:gravity="center"
                                            android:paddingLeft="5dp"
                                            android:text="66"
                                            android:textSize="@dimen/text_size_12" />

                                        <TextView
                                            android:id="@+id/home_score3"
                                            android:layout_width="20dp"
                                            android:layout_height="wrap_content"
                                            android:gravity="center"
                                            android:paddingLeft="5dp"
                                            android:text="66"
                                            android:textSize="@dimen/text_size_12" />

                                        <TextView
                                            android:id="@+id/home_score4"
                                            android:layout_width="20dp"
                                            android:layout_height="wrap_content"
                                            android:gravity="center"
                                            android:paddingLeft="5dp"
                                            android:text="66"
                                            android:textSize="@dimen/text_size_12" />

                                        <TextView
                                            android:id="@+id/home_score_ot"
                                            android:layout_width="20dp"
                                            android:layout_height="wrap_content"
                                            android:gravity="center"
                                            android:paddingLeft="5dp"
                                            android:text="66"
                                            android:textSize="@dimen/text_size_12"
                                            android:visibility="gone" />
                                    </LinearLayout>

                                    <!--<View-->
                                        <!--android:id="@+id/halving_line2"-->
                                        <!--android:layout_width="0.5dp"-->
                                        <!--android:layout_height="match_parent"-->
                                        <!--android:layout_gravity="center_horizontal"-->
                                        <!--android:background="@color/snooker_line" />-->

                                    <ImageView
                                        android:layout_width="1dp"
                                        android:layout_height="20dp" />

                                    <!--<TextView-->
                                        <!--android:id="@+id/basket_home_all_score"-->
                                        <!--android:layout_width="30dp"-->
                                        <!--android:layout_height="wrap_content"-->
                                        <!--android:gravity="center"-->
                                        <!--android:paddingLeft="5dp"-->
                                        <!--android:text="666"-->
                                        <!--android:textColor="#0085E1"-->
                                        <!--android:textSize="@dimen/text_size_12" />-->
                                </LinearLayout>
                            </LinearLayout>
                        </LinearLayout>
                        <View
                            android:id="@+id/halving_line"
                            android:layout_width="0.5dp"
                            android:layout_height="match_parent"
                            android:layout_gravity="center_horizontal"
                            android:background="@color/snooker_line" />
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            >
                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:padding="3dp">
                                <TextView
                                    android:id="@+id/basket_guest_all_score"
                                    android:layout_width="30dp"
                                    android:layout_height="wrap_content"
                                    android:gravity="center"
                                    android:paddingLeft="2dp"
                                    android:text="666"
                                    android:textColor="#0085E1"
                                    android:textSize="@dimen/text_size_12" />
                                <ImageView
                                    android:layout_width="1dp"
                                    android:layout_height="20dp" />
                            </LinearLayout>
                           <LinearLayout
                               android:layout_width="wrap_content"
                               android:layout_height="wrap_content"
                               android:gravity="center"
                               android:padding="3dp">
                               <TextView
                                   android:id="@+id/basket_home_all_score"
                                   android:layout_width="30dp"
                                   android:layout_height="wrap_content"
                                   android:gravity="center"
                                   android:paddingLeft="2dp"
                                   android:text="666"
                                   android:textColor="#0085E1"
                                   android:textSize="@dimen/text_size_12" />
                               <ImageView
                                   android:layout_width="1dp"
                                   android:layout_height="20dp" />
                           </LinearLayout>
                        </LinearLayout>
                    </LinearLayout>



                </LinearLayout>
            </LinearLayout>

            <ImageView
                android:id="@+id/Iv_guangzhu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:background="@mipmap/iconfont_guanzhu" />
        </RelativeLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>