<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/prestadium_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:visibility="gone">
    <!--开赛-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingLeft="25dp"
        android:paddingTop="10dp"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/pre_time_img"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/pre_time" />

                <TextView
                    android:id="@+id/pre_time_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:text="@string/football_detail_pre_title1"
                    android:textColor="@color/content_txt_light_grad"
                    android:textSize="15sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="24.5dp"
                android:layout_marginTop="10dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/pre_dataTime_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/content_txt_black"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/pre_dataDate_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:textColor="@color/content_txt_black"
                    android:textSize="16sp" />
            </LinearLayout>
        </LinearLayout>
        <!--天气-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/pre_weather_img"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:src="@mipmap/pre_weather_sunny" />

                <TextView
                    android:id="@+id/pre_weather_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:text="@string/football_detail_pre_title2"
                    android:textColor="@color/content_txt_light_grad"
                    android:textSize="16sp" />

            </LinearLayout>

            <TextView
                android:id="@+id/pre_weather_data_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="24.5dp"
                android:layout_marginTop="10dp"
                android:textColor="@color/content_txt_black"
                android:textSize="16sp" />
        </LinearLayout>
        <!--场地-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/pre_site_img"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:src="@mipmap/pre_site" />

                <TextView
                    android:id="@+id/pre_site_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:text="@string/football_detail_pre_title3"
                    android:textColor="@color/content_txt_light_grad"
                    android:textSize="16sp" />
            </LinearLayout>


            <TextView
                android:id="@+id/pre_site_data_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="24.5dp"
                android:layout_marginTop="10dp"
                android:textColor="@color/content_txt_black"
                android:textSize="16sp" />
        </LinearLayout>
        <!--首发-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/pre_first_img"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:src="@mipmap/pre_first" />

                <TextView
                    android:id="@+id/pre_first_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="10dp"
                    android:text="@string/football_detail_pre_title4"
                    android:textColor="@color/content_txt_light_grad"
                    android:textSize="16sp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/pre_first_layout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="24.5dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/pre_first_home_data_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:textColor="#f15353"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/pre_first_home_datas_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:lineSpacingMultiplier="1.5"
                    android:textColor="@color/content_txt_black"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/pre_first_guest_data_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:textColor="#2766f6"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/pre_first_guest_datas_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:lineSpacingMultiplier="1.5"
                    android:textColor="@color/content_txt_black"
                    android:textSize="16sp" />
            </LinearLayout>

            <TextView
                android:id="@+id/pre_first_not_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="24.5dp"
                android:layout_marginTop="10dp"
                android:textColor="@color/content_txt_black"
                android:textSize="16sp"
                android:visibility="gone"
                />

        </LinearLayout>
    </LinearLayout>
</ScrollView>
