<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
  >
<LinearLayout
    android:background="#F5F5F5"
    android:gravity="center"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="40dp">


    <TextView
        android:id="@+id/live_item_day_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@id/basketball_date_icon"
        android:paddingLeft="7dp"
        android:text="2016-01-01"
        android:textColor="#666666"
        android:textSize="14dp" />

    <TextView
        android:id="@+id/video_week"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@id/live_item_day_txt"
        android:paddingLeft="5dp"
        android:text="周一"
        android:textColor="#666666"
        android:textSize="14dp" />

    <TextView
        android:id="@+id/video_day"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@id/video_week"
        android:paddingLeft="5dp"
        android:text="今天"
        android:textColor="#666666"
        android:textSize="14dp" />

</LinearLayout>
