<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <!--亚盘item-->
    <View
        android:layout_width="match_parent"
        android:layout_height="0.2dp"
        android:background="@color/line_football_footer" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/y130"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/plate_company_txt"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.2"
            android:gravity="center"
            android:text="皇冠"
            android:textSize="13sp"
            android:textColor="@color/res_name_color"/>

        <TableLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="5"
            android:background="@color/line_football_footer">

            <TableRow
                android:id="@+id/plateTableRow"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginLeft="0.2dp"
                android:layout_weight="1">

                <TextView
                    style="@style/plateTableBg"
                    android:layout_weight="2"
                    android:text="即赔"
                    android:textColor="@color/tabhost_unselected_text"/>

                <TextView
                    android:id="@+id/plate_homeOdds_txt"
                    style="@style/plateTableBg"
                    android:layout_weight="3"
                    android:text="2.50" />

                <TextView
                    android:id="@+id/plate_dish_txt"
                    style="@style/plateTableBg"
                    android:layout_weight="4"
                    android:text="*平手"
                    android:textColor="@color/tabhost_unselected_text"/>

                <TextView
                    android:id="@+id/plate_guestOdds_txt"
                    style="@style/plateTableBg"
                    android:layout_weight="3"
                    android:text="1.40"
                    android:textColor="@color/tabhost_unselected_text"/>
            </TableRow>



            <TableRow
                android:id="@+id/plateTableRow2"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginLeft="0.2dp"
                android:layout_weight="1">

                <TextView
                    style="@style/plateTableBg2"
                    android:layout_weight="2"
                    android:text="初赔"
                    android:textColor="@color/content_txt_dark_grad"/>

                <TextView
                    android:id="@+id/plate_homeOdds_txt2"
                    style="@style/plateTableBg2"
                    android:layout_weight="3"
                    android:text="1.50"
                    android:textColor="@color/content_txt_dark_grad"/>

                <TextView
                    android:id="@+id/plate_dish_txt2"
                    style="@style/plateTableBg2"
                    android:layout_weight="4"
                    android:text="*平手/两球半"
                    android:textColor="@color/content_txt_dark_grad"/>

                <TextView
                    android:id="@+id/plate_guestOdds_txt2"
                    style="@style/plateTableBg2"
                    android:layout_weight="3"
                    android:text="1.60"
                    android:textColor="@color/content_txt_dark_grad"/>
            </TableRow>
        </TableLayout>

        <ImageView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="0.7"
            android:src="@mipmap/plate_icon" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.2dp"
        android:layout_marginBottom="@dimen/x24"
        android:background="@color/line_football_footer" />
</LinearLayout>