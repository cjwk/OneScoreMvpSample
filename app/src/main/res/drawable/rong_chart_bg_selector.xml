<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <!--选中颜色-->
    <item android:state_pressed="true">
        <shape>
            <corners android:radius="5dp" />
            <solid android:color="@color/more_record" />
            <stroke android:width="0sp" android:color="@color/more_record" />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape>
            <corners android:radius="5dp" />
            <solid android:color="@color/more_record" />
            <stroke android:width="0sp" android:color="@color/more_record" />
        </shape>
    </item>
    <item android:state_selected="true">
        <shape>
            <corners android:radius="5dp" />
            <solid android:color="@color/more_record" />
            <stroke android:width="0sp" android:color="@color/more_record" />
        </shape>
    </item>

    <!--默认颜色-->
    <item android:state_pressed="false">
        <shape>
            <corners android:radius="5dp" />

            <solid android:color="@color/line_football_footer" />

            <stroke android:width="0sp" android:color="@color/line_football_footer" />

        </shape>
    </item>
</selector>
